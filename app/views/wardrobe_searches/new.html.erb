<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 py-8 px-4">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Search Your Wardrobe</h1>
      <p class="text-slate-300">Find similar items by uploading an image or describing what you're looking for.</p>
    </div>

    <!-- Search Options -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Image Search Card -->
      <div class="bg-white/5 backdrop-blur-sm rounded-xl border border-white/10 p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-lg bg-purple-600/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-white">Image Search</h2>
            <% if @is_premium %>
              <div id="remaining-searches">
                <%= render "wardrobe_searches/remaining_searches", remaining: @remaining_searches %>
              </div>
            <% else %>
              <span class="text-xs text-purple-400">Premium Feature</span>
            <% end %>
          </div>
        </div>

        <% if @can_search_images %>
          <%= form_with url: wardrobe_searches_path, method: :post, data: { turbo_frame: "_top", controller: "image-upload" }, class: "space-y-4" do |f| %>
            <div class="relative border-2 border-dashed border-white/20 rounded-lg p-6 text-center hover:border-purple-500/50 transition-colors cursor-pointer"
                 data-image-upload-target="dropzone"
                 data-action="click->image-upload#click dragover->image-upload#dragover dragleave->image-upload#dragleave drop->image-upload#drop">
              <input type="file" name="image" accept="image/*" class="hidden" data-image-upload-target="input" data-action="change->image-upload#preview">

              <div data-image-upload-target="placeholder">
                <svg class="w-10 h-10 text-slate-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                <p class="text-slate-400 text-sm">Drop an image here or click to upload</p>
                <p class="text-slate-500 text-xs mt-1">PNG, JPG up to 10MB</p>
              </div>

              <div data-image-upload-target="preview" class="hidden">
                <img src="" alt="Preview" class="max-h-40 mx-auto rounded-lg" data-image-upload-target="previewImage">
                <p class="text-slate-300 text-sm mt-2" data-image-upload-target="fileName"></p>
              </div>
            </div>

            <button type="submit" class="w-full px-4 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                    data-image-upload-target="submit" disabled>
              Search by Image
            </button>
          <% end %>
        <% else %>
          <div class="border-2 border-dashed border-white/10 rounded-lg p-6 text-center">
            <svg class="w-10 h-10 text-slate-600 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <p class="text-slate-400 text-sm mb-4">
              <% if @is_premium %>
                You've used all your image searches today.
              <% else %>
                Image search is a Premium feature.
              <% end %>
            </p>
            <%= link_to "Upgrade to Premium", new_subscription_path, class: "inline-block px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-sm font-medium rounded-lg hover:from-purple-500 hover:to-pink-500 transition-all" %>
          </div>
        <% end %>
      </div>

      <!-- Text Search Card -->
      <div class="bg-white/5 backdrop-blur-sm rounded-xl border border-white/10 p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-lg bg-blue-600/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-white">Text Search</h2>
            <span class="text-xs text-slate-400">Free for all users</span>
          </div>
        </div>

        <%= form_with url: wardrobe_searches_path, method: :post, data: { turbo_frame: "_top" }, class: "space-y-4" do |f| %>
          <div>
            <input type="text" name="query" placeholder="e.g., blue denim jacket, summer dress..."
                   class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          </div>
          <button type="submit" class="w-full px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
            Search by Description
          </button>
        <% end %>
      </div>
    </div>

    <!-- Results Area -->
    <div id="search-results">
      <%= render "wardrobe_searches/empty_state" %>
    </div>

    <!-- Back Link -->
    <div class="mt-8 text-center">
      <%= link_to "Back to Wardrobe", wardrobe_items_path, class: "text-slate-400 hover:text-white transition-colors" %>
    </div>
  </div>
</div>
