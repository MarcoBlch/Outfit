<div class="group relative bg-white/5 rounded-lg overflow-hidden border border-white/10 hover:border-purple-500/50 transition-all">
  <% item = result[:item] %>
  <% similarity = result[:similarity_score] %>

  <!-- Item Image -->
  <div class="aspect-square overflow-hidden">
    <% if item.image.attached? %>
      <%= image_tag item.image.variant(resize_to_fill: [300, 300]),
          class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
          alt: "#{item.category} - #{item.color}" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center bg-slate-800">
        <svg class="w-12 h-12 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Similarity Badge -->
  <div class="absolute top-2 right-2">
    <span class="px-2 py-1 text-xs font-medium rounded-full
      <%= if similarity >= 80
            'bg-green-500/80 text-white'
          elsif similarity >= 60
            'bg-yellow-500/80 text-white'
          else
            'bg-slate-500/80 text-white'
          end %>">
      <%= similarity.round %>% match
    </span>
  </div>

  <!-- Item Info -->
  <div class="p-3">
    <h4 class="text-white font-medium text-sm truncate">
      <%= item.category&.titleize || "Unknown Category" %>
    </h4>
    <div class="flex items-center gap-2 mt-1">
      <% if item.color.present? %>
        <span class="inline-flex items-center gap-1 text-xs text-slate-400">
          <span class="w-3 h-3 rounded-full border border-white/20" style="background-color: <%= color_to_css(item.color) %>"></span>
          <%= item.color.titleize %>
        </span>
      <% end %>
      <% if item.brand.present? %>
        <span class="text-xs text-slate-500"><%= item.brand %></span>
      <% end %>
    </div>
  </div>

  <!-- Hover Actions -->
  <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-2">
    <%= link_to wardrobe_item_path(item),
        class: "px-3 py-2 bg-white/10 hover:bg-white/20 text-white text-sm rounded-lg transition-colors" do %>
      View Details
    <% end %>
    <%= link_to new_outfit_path(wardrobe_item_ids: [item.id]),
        class: "px-3 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm rounded-lg transition-colors" do %>
      Add to Outfit
    <% end %>
  </div>
</div>
