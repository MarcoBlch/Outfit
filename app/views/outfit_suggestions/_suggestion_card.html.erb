<div class="glass rounded-xl p-4 space-y-4 hover:shadow-lg hover:shadow-purple-600/10 transition-all duration-200">
  <!-- Outfit preview -->
  <div class="aspect-[3/4] bg-white/5 rounded-lg overflow-hidden relative">
    <div class="absolute inset-0 flex flex-col items-center justify-center p-4 space-y-3">
      <% outfit["items"].each do |item| %>
        <% wardrobe_item = WardrobeItem.find(item["id"]) %>
        <div class="relative w-full max-w-[120px]">
          <%= image_tag wardrobe_item.image_url,
              alt: wardrobe_item.category,
              class: "w-full h-auto object-contain rounded-lg shadow-lg" %>
          <span class="absolute -bottom-1 -right-1 text-xs px-2 py-0.5 bg-black/60 text-white rounded-full">
            <%= wardrobe_item.category %>
          </span>
        </div>
      <% end %>
    </div>

    <!-- Confidence badge -->
    <div class="absolute top-3 right-3">
      <%
        confidence_color = case outfit["confidence"]
        when 80..100 then "green"
        when 60..79 then "yellow"
        else "orange"
        end
      %>
      <span class="inline-flex items-center px-2 py-1 bg-black/60 backdrop-blur-sm rounded-full text-xs text-white">
        <svg class="w-3 h-3 mr-1 text-<%= confidence_color %>-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <%= outfit["confidence"] %>%
      </span>
    </div>

    <!-- Outfit number -->
    <div class="absolute top-3 left-3">
      <span class="inline-flex items-center justify-center w-8 h-8 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-full text-sm">
        <%= index + 1 %>
      </span>
    </div>
  </div>

  <!-- Outfit details -->
  <div class="space-y-2">
    <!-- Reasoning -->
    <p class="text-sm text-gray-300 leading-relaxed">
      <%= outfit["reasoning"] %>
    </p>

    <!-- Items list -->
    <div class="flex flex-wrap gap-2">
      <% outfit["items"].each do |item| %>
        <% wardrobe_item = WardrobeItem.find(item["id"]) %>
        <span class="text-xs px-2 py-1 bg-white/5 text-gray-400 rounded-full">
          <%= wardrobe_item.category %> Â· <%= wardrobe_item.color %>
        </span>
      <% end %>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="flex items-center space-x-2 pt-2">
    <%= button_to "Save Outfit",
        outfits_path,
        method: :post,
        params: {
          outfit: {
            name: "Outfit for #{outfit["context"] || suggestion.context}",
            occasion: suggestion.context,
            wardrobe_item_ids: outfit["items"].map { |item| item["id"] }
          }
        },
        data: { turbo_frame: "_top" },
        class: "flex-1 px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-sm font-medium rounded-lg hover:shadow-lg hover:shadow-purple-600/30 transition-all duration-200" %>

    <%= link_to "View on Canvas",
        new_outfit_path(wardrobe_item_ids: outfit["items"].map { |item| item["id"] }),
        data: { turbo_frame: "_top" },
        class: "flex-1 px-4 py-2 bg-white/5 hover:bg-white/10 text-white text-sm font-medium rounded-lg border border-white/10 transition-colors text-center" %>
  </div>
</div>
