<div class="container mx-auto px-4 py-8 space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-1">
      <h1 class="text-3xl font-bold text-white">
        AI Outfit Suggestions
      </h1>
      <p class="text-gray-400">
        Your personalized outfit recommendations history
      </p>
    </div>

    <%= link_to new_outfit_suggestion_path,
        data: { turbo_frame: "modal" },
        class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl shadow-lg shadow-purple-600/20 hover:shadow-purple-600/40 transition-all duration-200 inline-flex items-center space-x-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      <span>Get New Suggestions</span>
    <% end %>
  </div>

  <!-- Stats cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="glass rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-400 mb-1">Today's Usage</p>
          <p class="text-2xl font-bold text-white">
            <%= current_user.outfit_suggestions.today.count %>
            <span class="text-base text-gray-400">/ <%= current_user.remaining_suggestions_today + current_user.outfit_suggestions.today.count %></span>
          </p>
        </div>
        <div class="w-12 h-12 bg-purple-600/10 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="glass rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-400 mb-1">Total Suggestions</p>
          <p class="text-2xl font-bold text-white">
            <%= current_user.outfit_suggestions.completed.count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-green-600/10 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="glass rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-400 mb-1">Remaining</p>
          <p class="text-2xl font-bold text-white">
            <%= current_user.remaining_suggestions_today %>
          </p>
        </div>
        <div class="w-12 h-12 bg-blue-600/10 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Suggestions list -->
  <% if @suggestions.any? %>
    <div class="space-y-4">
      <h2 class="text-xl font-bold text-white">Recent Suggestions</h2>

      <div class="space-y-3">
        <% @suggestions.each do |suggestion| %>
          <%= link_to outfit_suggestion_path(suggestion),
              class: "block glass rounded-xl p-6 hover:shadow-lg hover:shadow-purple-600/10 transition-all duration-200" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1 space-y-2">
                <!-- Context -->
                <div class="flex items-center space-x-2">
                  <span class="text-base font-semibold text-white">
                    "<%= suggestion.context %>"
                  </span>
                  <% if suggestion.status == "completed" %>
                    <span class="text-xs px-2 py-0.5 bg-green-600/20 text-green-400 rounded-full">
                      âœ“ Completed
                    </span>
                  <% elsif suggestion.status == "failed" %>
                    <span class="text-xs px-2 py-0.5 bg-red-600/20 text-red-400 rounded-full">
                      Failed
                    </span>
                  <% end %>
                </div>

                <!-- Metadata -->
                <div class="flex items-center space-x-4 text-sm text-gray-400">
                  <span class="flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span><%= time_ago_in_words(suggestion.created_at) %> ago</span>
                  </span>

                  <% if suggestion.response_time_ms %>
                    <span class="flex items-center space-x-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                      <span><%= suggestion.response_time_ms %>ms</span>
                    </span>
                  <% end %>

                  <% if suggestion.status == "completed" && suggestion.suggestions_data %>
                    <span class="flex items-center space-x-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                      </svg>
                      <span><%= suggestion.suggestions_data.length %> outfits</span>
                    </span>
                  <% end %>
                </div>
              </div>

              <!-- Arrow -->
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="glass rounded-xl p-12 text-center space-y-4">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-600/10 rounded-full mb-2">
        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>

      <h3 class="text-xl font-bold text-white">No suggestions yet</h3>
      <p class="text-gray-400 max-w-md mx-auto">
        Get AI-powered outfit suggestions based on your wardrobe and occasion.
      </p>

      <%= link_to new_outfit_suggestion_path,
          data: { turbo_frame: "modal" },
          class: "inline-flex items-center space-x-2 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl shadow-lg shadow-purple-600/20 hover:shadow-purple-600/40 transition-all duration-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span>Get Your First Suggestions</span>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Modal container for Turbo Frame -->
<turbo-frame id="modal"></turbo-frame>
