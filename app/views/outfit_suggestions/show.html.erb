<div class="container mx-auto px-4 py-8 space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <%= link_to outfit_suggestions_path, class: "inline-flex items-center text-gray-400 hover:text-white transition-colors text-sm mb-2" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to suggestions
      <% end %>

      <h1 class="text-3xl font-bold text-white">
        Outfit Suggestions
      </h1>
      <p class="text-gray-400">
        For: "<%= @suggestion.context %>"
      </p>
    </div>

    <%= link_to new_outfit_suggestion_path,
        data: { turbo_frame: "modal" },
        class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl shadow-lg shadow-purple-600/20 hover:shadow-purple-600/40 transition-all duration-200 inline-flex items-center space-x-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      <span>New Suggestions</span>
    <% end %>
  </div>

  <!-- Metadata card -->
  <div class="glass rounded-xl p-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="space-y-1">
        <p class="text-sm text-gray-400">Status</p>
        <% if @suggestion.status == "completed" %>
          <span class="inline-flex items-center px-3 py-1 bg-green-600/20 text-green-400 rounded-full text-sm font-medium">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Completed
          </span>
        <% elsif @suggestion.status == "failed" %>
          <span class="inline-flex items-center px-3 py-1 bg-red-600/20 text-red-400 rounded-full text-sm font-medium">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            Failed
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 bg-yellow-600/20 text-yellow-400 rounded-full text-sm font-medium">
            Pending
          </span>
        <% end %>
      </div>

      <div class="space-y-1">
        <p class="text-sm text-gray-400">Created</p>
        <p class="text-white font-medium">
          <%= time_ago_in_words(@suggestion.created_at) %> ago
        </p>
      </div>

      <% if @suggestion.response_time_ms %>
        <div class="space-y-1">
          <p class="text-sm text-gray-400">Response Time</p>
          <p class="text-white font-medium">
            <%= @suggestion.response_time_ms %>ms
          </p>
        </div>
      <% end %>

      <% if @suggestion.api_cost %>
        <div class="space-y-1">
          <p class="text-sm text-gray-400">API Cost</p>
          <p class="text-white font-medium">
            $<%= sprintf("%.4f", @suggestion.api_cost) %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Suggestions content -->
  <% if @suggestion.status == "completed" && @suggestion.validated_suggestions %>
    <div class="space-y-4">
      <h2 class="text-xl font-bold text-white">Suggested Outfits</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% @suggestion.validated_suggestions.each_with_index do |outfit, index| %>
          <%= render "outfit_suggestions/suggestion_card", outfit: outfit, index: index, suggestion: @suggestion %>
        <% end %>
      </div>
    </div>

  <% elsif @suggestion.status == "failed" %>
    <!-- Error state -->
    <%= render "outfit_suggestions/error", message: @suggestion.error_message || "Unknown error occurred" %>

  <% else %>
    <!-- Pending state -->
    <div class="glass rounded-xl p-12 text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 mb-4">
        <svg class="animate-spin h-12 w-12 text-purple-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      <p class="text-gray-400 text-lg">
        Processing your request...
      </p>
    </div>
  <% end %>

  <!-- Complete Your Look Section -->
  <% if @suggestion.status == "completed" && @suggestion.product_recommendations.exists? %>
    <div class="space-y-6 pt-8">
      <!-- Section Header -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-white/10"></div>
        </div>
        <div class="relative flex justify-center">
          <div class="px-6 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full shadow-lg shadow-purple-600/30">
            <h2 class="text-2xl font-bold py-3">
              Complete Your Look
            </h2>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="text-center max-w-2xl mx-auto space-y-2">
        <p class="text-gray-300 text-lg">
          We've identified items that would complement your wardrobe and help you achieve this look.
        </p>
        <p class="text-gray-500 text-sm">
          Our AI analyzed your current wardrobe and found these perfect additions.
        </p>
      </div>

      <!-- Product Recommendations -->
      <turbo-frame id="product_recommendations_<%= @suggestion.id %>"
                   src="<%= show_recommendations_outfit_suggestion_path(@suggestion) %>"
                   loading="lazy">
        <!-- Loading State -->
        <div class="glass rounded-xl p-12 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 mb-4">
            <svg class="animate-spin h-12 w-12 text-purple-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
          <p class="text-gray-400">
            Loading shopping recommendations...
          </p>
        </div>
      </turbo-frame>
    </div>
  <% end %>
</div>

<!-- Modal container for Turbo Frame -->
<turbo-frame id="modal"></turbo-frame>
