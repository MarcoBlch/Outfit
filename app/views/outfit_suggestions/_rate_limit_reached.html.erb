<div class="glass rounded-xl p-8 text-center space-y-6">
  <!-- Icon -->
  <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full">
    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
    </svg>
  </div>

  <!-- Message -->
  <div class="space-y-2">
    <h3 class="text-2xl font-bold text-white">
      Daily limit reached
    </h3>
    <p class="text-gray-400">
      You've used all <strong class="text-white">3 free suggestions</strong> for today.
    </p>
  </div>

  <!-- Upgrade options -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl mx-auto">
    <!-- Premium plan -->
    <div class="glass rounded-xl p-6 space-y-4 border-2 border-purple-600/30 hover:border-purple-600/50 transition-colors">
      <div class="space-y-2">
        <div class="flex items-center justify-between">
          <h4 class="text-lg font-bold text-white">Premium</h4>
          <span class="text-xs px-2 py-1 bg-purple-600/20 text-purple-400 rounded-full font-medium">
            POPULAR
          </span>
        </div>
        <div class="flex items-baseline space-x-1">
          <span class="text-3xl font-bold text-white">$7.99</span>
          <span class="text-sm text-gray-400">/month</span>
        </div>
      </div>

      <ul class="space-y-2 text-sm text-gray-300">
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span><strong class="text-white">15</strong> AI suggestions/day</span>
        </li>
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span><strong class="text-white">300</strong> wardrobe items</span>
        </li>
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>AI-powered image search</span>
        </li>
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Background removal</span>
        </li>
      </ul>

      <%= link_to new_subscription_path(plan: 'premium'),
          class: "block w-full px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-lg shadow-lg shadow-purple-600/20 hover:shadow-purple-600/40 transition-all duration-200 text-center" do %>
        Start 7-Day Free Trial
      <% end %>
    </div>

    <!-- Pro plan -->
    <div class="glass rounded-xl p-6 space-y-4 border border-white/10 hover:border-white/20 transition-colors">
      <div class="space-y-2">
        <h4 class="text-lg font-bold text-white">Pro</h4>
        <div class="flex items-baseline space-x-1">
          <span class="text-3xl font-bold text-white">$14.99</span>
          <span class="text-sm text-gray-400">/month</span>
        </div>
      </div>

      <ul class="space-y-2 text-sm text-gray-300">
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span><strong class="text-white">Unlimited</strong> AI suggestions</span>
        </li>
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span><strong class="text-white">Unlimited</strong> wardrobe items</span>
        </li>
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Virtual try-on (coming soon)</span>
        </li>
        <li class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>24/7 Priority support</span>
        </li>
      </ul>

      <%= link_to new_subscription_path(plan: 'pro'),
          class: "block w-full px-6 py-3 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg border border-white/10 transition-colors text-center" do %>
        Upgrade to Pro
      <% end %>
    </div>
  </div>

  <!-- Alternative action -->
  <div class="pt-4">
    <p class="text-sm text-gray-400">
      Come back tomorrow for 3 more free suggestions, or
      <%= link_to "go back to your wardrobe", wardrobe_items_path,
          class: "text-purple-400 hover:text-purple-300 underline" %>
    </p>
  </div>
</div>
