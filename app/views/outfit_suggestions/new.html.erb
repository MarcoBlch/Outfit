<turbo-frame id="modal">
  <%= render "shared/modal" do %>
    <div data-controller="outfit-suggestion"
         data-outfit-suggestion-remaining-value="<%= current_user.remaining_suggestions_today %>"
         class="space-y-6">

      <!-- Header -->
      <div class="space-y-2">
        <h2 class="text-2xl font-bold text-white">
          AI Outfit Suggestions
        </h2>
        <p class="text-gray-400 text-sm">
          Describe where you're going, and I'll suggest outfits from your wardrobe
        </p>
      </div>

      <!-- Rate Limit Badge -->
      <div class="flex items-center justify-between p-4 glass rounded-lg border border-white/10">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span class="text-sm text-gray-300">
            <span id="remaining-count" data-outfit-suggestion-target="remainingCount" class="font-bold text-white"><%= current_user.remaining_suggestions_today %></span>
            suggestions remaining today
          </span>
        </div>

        <% unless current_user.premium? %>
          <a href="#" class="text-xs px-3 py-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full hover:shadow-lg hover:shadow-purple-600/30 transition-all duration-200">
            Upgrade
          </a>
        <% end %>
      </div>

      <!-- Weather Display (if available) -->
      <% if current_user.weather_available? %>
        <% weather = current_user.current_weather %>
        <% if weather.present? %>
          <div class="flex items-start space-x-3 p-4 glass rounded-lg border border-white/10">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-300">Current Weather</p>
                  <p class="text-2xl font-bold text-white"><%= weather[:temp] %>°F</p>
                  <p class="text-xs text-gray-400 capitalize"><%= weather[:condition] %></p>
                </div>
                <div class="text-right text-xs text-gray-400">
                  <div>Feels like <%= weather[:feels_like] %>°F</div>
                  <div><%= weather[:humidity] %>% humidity</div>
                  <div><%= weather[:wind_speed] %> mph wind</div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Input Form -->
      <%= form_with url: outfit_suggestions_path,
                    method: :post,
                    data: {
                      outfit_suggestion_target: "form",
                      action: "submit->outfit-suggestion#submit"
                    },
                    class: "space-y-4" do |f| %>

        <div class="space-y-2">
          <label for="context" class="block text-sm font-medium text-gray-300">
            What's the occasion?
          </label>

          <div class="relative">
            <%= f.text_area :context,
                rows: 3,
                placeholder: "e.g., job interview at tech startup, casual coffee date, wedding guest...",
                data: {
                  outfit_suggestion_target: "input",
                  action: "keydown->outfit-suggestion#handleKeydown"
                },
                class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent resize-none" %>

            <!-- Character hint -->
            <div class="absolute bottom-3 right-3 text-xs text-gray-500">
              ⌘+Enter to submit
            </div>
          </div>

          <!-- Quick suggestions -->
          <div class="flex flex-wrap gap-2">
            <span class="text-xs text-gray-500">Quick ideas:</span>
            <% ["Business casual", "Date night", "Gym session", "Brunch with friends"].each do |preset| %>
              <button type="button"
                      onclick="document.querySelector('[data-outfit-suggestion-target=input]').value = '<%= preset %>'"
                      class="text-xs px-2 py-1 bg-white/5 hover:bg-white/10 text-gray-400 hover:text-white rounded-full transition-colors">
                <%= preset %>
              </button>
            <% end %>
          </div>
        </div>

        <!-- Weather Toggle (if available) -->
        <% if current_user.weather_available? %>
          <div class="flex items-center justify-between p-3 bg-white/5 rounded-lg">
            <label for="include_weather" class="flex items-center space-x-2 cursor-pointer">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
              <span class="text-sm text-gray-300">Include weather in suggestions</span>
            </label>
            <%= f.check_box :include_weather,
                { checked: true, class: "w-5 h-5 rounded bg-white/10 border-white/20 text-purple-600 focus:ring-purple-600 focus:ring-offset-0 cursor-pointer" },
                "true",
                "false" %>
          </div>
        <% end %>

        <button type="submit"
                data-outfit-suggestion-target="submitButton"
                class="w-full px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl shadow-lg shadow-purple-600/20 hover:shadow-purple-600/40 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
          Generate Suggestions
        </button>
      <% end %>

      <!-- Loading State (Skeleton) -->
      <div data-outfit-suggestion-target="loadingState" class="hidden space-y-4">
        <div class="text-center py-8">
          <!-- Animated spinner -->
          <div class="inline-flex items-center justify-center w-16 h-16 mb-4">
            <svg class="animate-spin h-12 w-12 text-purple-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>

          <p data-progress-message class="text-gray-400 text-sm animate-pulse">
            Analyzing your wardrobe...
          </p>
        </div>

        <!-- Skeleton cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <% 3.times do %>
            <div class="glass rounded-xl p-4 animate-pulse">
              <div class="aspect-[3/4] bg-white/5 rounded-lg mb-3"></div>
              <div class="h-4 bg-white/5 rounded w-3/4 mb-2"></div>
              <div class="h-3 bg-white/5 rounded w-full"></div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Empty State -->
      <div data-outfit-suggestion-target="emptyState" class="text-center py-12">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-600/10 rounded-full mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2">Your outfits await</h3>
        <p class="text-gray-400 text-sm">Describe your occasion above and let AI do the styling</p>
      </div>

      <!-- Error State -->
      <div id="suggestions-error" data-outfit-suggestion-target="errorState" class="hidden">
        <!-- Error content will be inserted here -->
      </div>

      <!-- Results Container (populated by Turbo Streams) -->
      <div data-outfit-suggestion-target="resultsContainer" id="suggestions-results">
        <!-- Turbo Stream will replace this -->
      </div>

    </div>
  <% end %>
</turbo-frame>
