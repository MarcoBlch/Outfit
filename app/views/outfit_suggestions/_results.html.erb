<div class="space-y-6"
     id="suggestion-results-<%= suggestion.id %>"
     data-controller="scroll-into-view">
  <!-- Success header -->
  <div class="text-center">
    <div class="inline-flex items-center justify-center w-12 h-12 bg-green-600/10 rounded-full mb-3">
      <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </div>
    <h3 class="text-xl font-bold text-white mb-2">
      Here are your outfit suggestions
    </h3>
    <p class="text-gray-400 text-sm">
      Based on: "<%= suggestion.context %>"
    </p>

    <!-- Weather Context Badge -->
    <% if defined?(weather) && weather.present? %>
      <div class="inline-flex items-center space-x-2 mt-3 px-4 py-2 bg-blue-600/10 border border-blue-600/20 rounded-full">
        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
        </svg>
        <span class="text-xs text-blue-300">
          Based on today's weather: <span class="font-semibold"><%= weather[:temp] %>Â°F, <%= weather[:condition].titleize %></span>
        </span>
      </div>
    <% end %>
  </div>

  <!-- Outfit cards grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% outfits.each_with_index do |outfit, index| %>
      <%= render "outfit_suggestions/suggestion_card", outfit: outfit, index: index, suggestion: suggestion %>
    <% end %>
  </div>

  <!-- Profile completion prompt (after first suggestion) -->
  <%= render "shared/profile_prompt" %>

  <!-- Actions footer -->
  <div class="flex items-center justify-between pt-4 border-t border-white/10">
    <%= link_to outfit_suggestion_path(id: suggestion.id),
                class: "inline-flex items-center text-sm px-4 py-2 bg-white/5 hover:bg-white/10 text-white rounded-lg transition-all duration-200",
                data: { turbo_action: "advance" } do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
      </svg>
      View Full Details
    <% end %>

    <div class="flex items-center space-x-3">
      <span class="text-xs text-gray-500">
        Generated in <%= suggestion.response_time_ms %>ms
      </span>

      <% unless current_user.can_request_suggestion? %>
        <a href="#" class="text-xs px-3 py-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full hover:shadow-lg hover:shadow-purple-600/30 transition-all duration-200">
          Upgrade for More
        </a>
      <% end %>
    </div>
  </div>
</div>
