<% content_for :page_title, "User Management" %>

<div class="space-y-6">
  <!-- Search and Filters -->
  <div class="glass rounded-xl p-6">
    <%= form_with url: admin_users_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Search Input -->
        <div class="md:col-span-2">
          <label for="search" class="block text-sm font-medium text-gray-400 mb-2">Search Users</label>
          <%= f.text_field :search,
              value: params[:search],
              placeholder: "Email or ID...",
              class: "w-full px-4 py-2 rounded-lg glass border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          %>
        </div>

        <!-- Tier Filter -->
        <div>
          <label for="tier" class="block text-sm font-medium text-gray-400 mb-2">Subscription Tier</label>
          <%= f.select :tier,
              options_for_select(
                [['All Tiers', ''], ['Free', 'free'], ['Premium', 'premium'], ['Pro', 'pro']],
                params[:tier]
              ),
              {},
              class: "w-full px-4 py-2 rounded-lg glass border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          %>
        </div>

        <!-- Activity Filter -->
        <div>
          <label for="activity" class="block text-sm font-medium text-gray-400 mb-2">Activity</label>
          <%= f.select :activity,
              options_for_select(
                [['All Users', ''], ['Active', 'active'], ['Inactive', 'inactive']],
                params[:activity]
              ),
              {},
              class: "w-full px-4 py-2 rounded-lg glass border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          %>
        </div>
      </div>

      <div class="flex items-center space-x-3">
        <%= f.submit "Apply Filters", class: "px-6 py-2 rounded-lg bg-primary hover:bg-primary-dark text-white font-medium transition-colors cursor-pointer" %>
        <%= link_to "Clear Filters", admin_users_path, class: "px-6 py-2 rounded-lg glass hover:bg-white/10 text-white font-medium transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Stats Summary -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="glass rounded-xl p-4">
      <p class="text-xs text-gray-400">Total Users</p>
      <p class="text-2xl font-bold text-white mt-1"><%= @users.total_count %></p>
    </div>
    <div class="glass rounded-xl p-4">
      <p class="text-xs text-gray-400">Free Tier</p>
      <p class="text-2xl font-bold text-gray-400 mt-1"><%= @free_count %></p>
    </div>
    <div class="glass rounded-xl p-4">
      <p class="text-xs text-gray-400">Premium</p>
      <p class="text-2xl font-bold text-purple-400 mt-1"><%= @premium_count %></p>
    </div>
    <div class="glass rounded-xl p-4">
      <p class="text-xs text-gray-400">Pro</p>
      <p class="text-2xl font-bold text-pink-400 mt-1"><%= @pro_count %></p>
    </div>
  </div>

  <!-- Users Table -->
  <div class="glass rounded-xl overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-black/20 border-b border-white/10">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">User</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Tier</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Joined</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Last Active</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Wardrobe</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Outfits</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">AI Usage</th>
            <th class="px-6 py-4 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% if @users.any? %>
            <% @users.each do |user| %>
              <tr class="hover:bg-white/5 transition-colors">
                <!-- User Info -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center text-white text-sm font-bold flex-shrink-0">
                      <%= user.email[0].upcase %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-white"><%= user.email %></div>
                      <div class="text-xs text-gray-400">ID: <%= user.id %></div>
                    </div>
                  </div>
                </td>

                <!-- Subscription Tier -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= tier_badge_color(user.subscription_tier) %>">
                    <%= user.subscription_tier&.capitalize || 'Free' %>
                  </span>
                </td>

                <!-- Joined Date -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= user.created_at.strftime("%b %d, %Y") %>
                </td>

                <!-- Last Active -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= user.current_sign_in_at ? time_ago_in_words(user.current_sign_in_at) + " ago" : "Never" %>
                </td>

                <!-- Wardrobe Count -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                  <%= user.wardrobe_items.count %>
                </td>

                <!-- Outfits Count -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                  <%= user.outfits.count %>
                </td>

                <!-- AI Suggestions Count -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                  <%= user.outfit_suggestions.count %>
                </td>

                <!-- Actions -->
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "View Details",
                      admin_user_path(user),
                      class: "text-primary hover:text-primary-dark transition-colors"
                  %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-6 py-12 text-center">
                <div class="text-gray-400">
                  <svg class="mx-auto h-12 w-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                  </svg>
                  <p class="text-white font-medium">No users found</p>
                  <p class="text-sm mt-1">Try adjusting your filters</p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @users.any? %>
      <div class="bg-black/20 px-6 py-4 border-t border-white/10">
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-400">
            Showing <%= @users.offset_value + 1 %> to <%= [@users.offset_value + @users.size, @users.total_count].min %> of <%= @users.total_count %> users
          </div>
          <div class="flex items-center space-x-2">
            <%= paginate @users,
                theme: 'admin',
                outer_window: 1,
                inner_window: 2,
                window: 2
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
