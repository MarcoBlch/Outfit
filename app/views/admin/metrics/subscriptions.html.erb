<% content_for :page_title, "Subscription Metrics" %>

<div class="space-y-6">
  <!-- Revenue KPIs -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <!-- Total MRR -->
    <div class="glass rounded-xl p-6 hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-400">Total MRR</p>
          <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@total_mrr) %></p>
          <% if @mrr_growth_percentage != 0 %>
            <p class="mt-2 text-xs <%= @mrr_growth_percentage > 0 ? 'text-green-400' : 'text-red-400' %>">
              <%= @mrr_growth_percentage > 0 ? '+' : '' %><%= number_to_percentage(@mrr_growth_percentage, precision: 1) %> vs last month
            </p>
          <% end %>
        </div>
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Premium MRR -->
    <div class="glass rounded-xl p-6 hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-400">Premium MRR</p>
          <p class="mt-2 text-3xl font-bold text-purple-400"><%= number_to_currency(@premium_mrr) %></p>
          <p class="mt-2 text-xs text-gray-400"><%= @premium_count %> subscribers</p>
        </div>
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Pro MRR -->
    <div class="glass rounded-xl p-6 hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-400">Pro MRR</p>
          <p class="mt-2 text-3xl font-bold text-pink-400"><%= number_to_currency(@pro_mrr) %></p>
          <p class="mt-2 text-xs text-gray-400"><%= @pro_count %> subscribers</p>
        </div>
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-pink-500 to-pink-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- ARPU -->
    <div class="glass rounded-xl p-6 hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-400">ARPU</p>
          <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@arpu) %></p>
          <p class="mt-2 text-xs text-gray-400">Per paying user</p>
        </div>
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Subscription Health -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <!-- New Subscriptions -->
    <div class="glass rounded-xl p-6">
      <p class="text-sm font-medium text-gray-400">New This Month</p>
      <p class="mt-2 text-2xl font-bold text-green-400"><%= @new_subscriptions_this_month %></p>
    </div>

    <!-- Cancellations -->
    <div class="glass rounded-xl p-6">
      <p class="text-sm font-medium text-gray-400">Cancellations</p>
      <p class="mt-2 text-2xl font-bold text-red-400"><%= @cancellations_this_month %></p>
    </div>

    <!-- Churn Rate -->
    <div class="glass rounded-xl p-6">
      <p class="text-sm font-medium text-gray-400">Churn Rate</p>
      <p class="mt-2 text-2xl font-bold text-white"><%= number_to_percentage(@churn_rate, precision: 1) %></p>
    </div>

    <!-- Conversion Rate -->
    <div class="glass rounded-xl p-6">
      <p class="text-sm font-medium text-gray-400">Conversion Rate</p>
      <p class="mt-2 text-2xl font-bold text-white"><%= number_to_percentage(@conversion_rate, precision: 1) %></p>
    </div>
  </div>

  <!-- Charts -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- MRR Over Time -->
    <div class="glass rounded-xl p-6">
      <h3 class="text-lg font-semibold text-white mb-4">MRR Trend (Last 6 Months)</h3>
      <%= line_chart @mrr_trend,
          library: {
            backgroundColor: 'transparent',
            borderColor: 'rgb(34, 197, 94)',
            tension: 0.4,
            fill: true,
            backgroundColor: 'rgba(34, 197, 94, 0.1)',
            pointBackgroundColor: 'rgb(34, 197, 94)',
            pointBorderColor: '#fff',
            scales: {
              y: {
                ticks: { color: 'rgb(156, 163, 175)' },
                grid: { color: 'rgba(255, 255, 255, 0.05)' }
              },
              x: {
                ticks: { color: 'rgb(156, 163, 175)' },
                grid: { color: 'rgba(255, 255, 255, 0.05)' }
              }
            },
            plugins: {
              legend: { display: false }
            }
          },
          prefix: "$",
          thousands: ",",
          height: "300px"
      %>
    </div>

    <!-- Subscriber Distribution -->
    <div class="glass rounded-xl p-6">
      <h3 class="text-lg font-semibold text-white mb-4">Subscriber Distribution</h3>
      <%= column_chart @subscriber_distribution,
          library: {
            backgroundColor: 'transparent',
            plugins: {
              legend: { display: false }
            },
            scales: {
              y: {
                ticks: { color: 'rgb(156, 163, 175)' },
                grid: { color: 'rgba(255, 255, 255, 0.05)' }
              },
              x: {
                ticks: { color: 'rgb(156, 163, 175)' },
                grid: { color: 'rgba(255, 255, 255, 0.05)' }
              }
            }
          },
          colors: ['rgb(107, 114, 128)', 'rgb(168, 85, 247)', 'rgb(236, 72, 153)'],
          height: "300px"
      %>
    </div>
  </div>

  <!-- Conversion Funnel -->
  <div class="glass rounded-xl p-6">
    <h3 class="text-lg font-semibold text-white mb-4">Conversion Funnel</h3>
    <div class="space-y-4">
      <!-- All Users -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-white">All Users</span>
          <span class="text-sm text-gray-400"><%= @total_users %> (100%)</span>
        </div>
        <div class="w-full bg-white/5 rounded-full h-3 overflow-hidden">
          <div class="bg-gradient-to-r from-gray-400 to-gray-500 h-3 rounded-full" style="width: 100%"></div>
        </div>
      </div>

      <!-- Free Users with Profile -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-white">Users with Profile</span>
          <span class="text-sm text-gray-400"><%= @users_with_profile %> (<%= number_to_percentage(@profile_completion_rate, precision: 1) %>)</span>
        </div>
        <div class="w-full bg-white/5 rounded-full h-3 overflow-hidden">
          <div class="bg-gradient-to-r from-blue-400 to-blue-500 h-3 rounded-full" style="width: <%= @profile_completion_rate %>%"></div>
        </div>
      </div>

      <!-- Premium Users -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-white">Premium Subscribers</span>
          <span class="text-sm text-gray-400"><%= @premium_count %> (<%= number_to_percentage(@premium_conversion_rate, precision: 1) %>)</span>
        </div>
        <div class="w-full bg-white/5 rounded-full h-3 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-400 to-purple-500 h-3 rounded-full" style="width: <%= @premium_conversion_rate %>%"></div>
        </div>
      </div>

      <!-- Pro Users -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-white">Pro Subscribers</span>
          <span class="text-sm text-gray-400"><%= @pro_count %> (<%= number_to_percentage(@pro_conversion_rate, precision: 1) %>)</span>
        </div>
        <div class="w-full bg-white/5 rounded-full h-3 overflow-hidden">
          <div class="bg-gradient-to-r from-pink-400 to-pink-500 h-3 rounded-full" style="width: <%= @pro_conversion_rate %>%"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Cohort Analysis -->
  <div class="glass rounded-xl p-6">
    <h3 class="text-lg font-semibold text-white mb-4">Cohort Retention (Last 12 Weeks)</h3>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-white/10">
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-400 uppercase">Cohort</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-400 uppercase">Users</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-400 uppercase">Week 1</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-400 uppercase">Week 2</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-400 uppercase">Week 4</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% @cohort_data.each do |cohort| %>
            <tr class="hover:bg-white/5">
              <td class="px-4 py-3 text-white"><%= cohort[:week] %></td>
              <td class="px-4 py-3 text-center text-white"><%= cohort[:total_users] %></td>
              <td class="px-4 py-3 text-center">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= retention_color(cohort[:week1_retention]) %>">
                  <%= number_to_percentage(cohort[:week1_retention], precision: 0) %>
                </span>
              </td>
              <td class="px-4 py-3 text-center">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= retention_color(cohort[:week2_retention]) %>">
                  <%= number_to_percentage(cohort[:week2_retention], precision: 0) %>
                </span>
              </td>
              <td class="px-4 py-3 text-center">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= retention_color(cohort[:week4_retention]) %>">
                  <%= number_to_percentage(cohort[:week4_retention], precision: 0) %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent Subscription Events -->
  <div class="glass rounded-xl p-6">
    <h3 class="text-lg font-semibold text-white mb-4">Recent Subscription Events</h3>
    <div class="space-y-3">
      <% if @recent_subscription_events.any? %>
        <% @recent_subscription_events.each do |event| %>
          <div class="flex items-center justify-between py-3 border-b border-white/5 last:border-0">
            <div class="flex items-center space-x-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= event[:badge_color] %>">
                <%= event[:type] %>
              </span>
              <span class="text-sm text-white"><%= event[:user_email] %></span>
              <span class="text-sm text-gray-400">â†’</span>
              <span class="text-sm text-white font-medium"><%= event[:tier]&.capitalize %></span>
            </div>
            <span class="text-xs text-gray-400"><%= event[:time] %></span>
          </div>
        <% end %>
      <% else %>
        <p class="text-center text-gray-400 py-8">No recent events</p>
      <% end %>
    </div>
  </div>
</div>
