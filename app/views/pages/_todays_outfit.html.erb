<div class="theme-card theme-border border rounded-2xl overflow-hidden shadow-lg">
  <% if current_user.wardrobe_items.any? %>
    <!-- Header -->
    <div class="px-6 py-4 theme-border border-b">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <h2 class="theme-text text-xl font-bold">Today's Outfit Suggestion</h2>
        </div>
        <%= link_to new_outfit_suggestion_path,
            data: { turbo_frame: "modal" },
            class: "text-sm text-purple-600 hover:text-purple-700 font-medium flex items-center space-x-1" do %>
          <span>Get New</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <% if current_user.outfit_suggestions.completed.any? %>
        <% latest_suggestion = current_user.outfit_suggestions.completed.order(created_at: :desc).first %>

        <!-- Context badge -->
        <div class="mb-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-600/20 text-purple-600">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            <%= latest_suggestion.context.presence || "General" %>
          </span>
        </div>

        <!-- Suggestion count indicator -->
        <div class="flex items-center justify-center mb-6">
          <div class="w-20 h-20 rounded-full bg-gradient-to-r from-purple-600 to-pink-600 flex items-center justify-center shadow-lg">
            <div class="text-center">
              <span class="text-2xl font-bold text-white"><%= latest_suggestion.suggestions_count || 0 %></span>
              <p class="text-xs text-white/80">outfits</p>
            </div>
          </div>
        </div>

        <!-- Context text (if available) -->
        <% if latest_suggestion.context.present? %>
          <div class="theme-bg rounded-lg p-4 mb-6">
            <p class="theme-text-secondary text-sm leading-relaxed">
              <%= truncate(latest_suggestion.context, length: 150) %>
            </p>
          </div>
        <% end %>

        <!-- Action buttons -->
        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to outfit_suggestion_path(latest_suggestion),
              class: "flex-1 px-4 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl text-center hover:shadow-lg transition-all duration-200 hover:scale-105" do %>
            View Full Details
          <% end %>
          <%= link_to new_outfit_suggestion_path,
              data: { turbo_frame: "modal" },
              class: "flex-1 px-4 py-3 theme-border border theme-text font-medium rounded-xl text-center hover:bg-purple-600/10 transition-all duration-200" do %>
            Generate New
          <% end %>
        </div>

        <!-- Stats footer -->
        <div class="mt-6 pt-4 theme-border border-t flex items-center justify-between text-xs theme-text-muted">
          <div class="flex items-center space-x-1">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span><%= current_user.remaining_suggestions_today %> suggestions left today</span>
          </div>
          <span><%= time_ago_in_words(latest_suggestion.created_at) %> ago</span>
        </div>
      <% else %>
        <!-- First time state - encourage using AI -->
        <div class="text-center py-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-r from-purple-600 to-pink-600 flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="theme-text text-lg font-semibold mb-2">Get Your First AI Outfit</h3>
          <p class="theme-text-secondary text-sm mb-6 max-w-md mx-auto">
            Tell me where you're going and I'll create the perfect outfit combination from your wardrobe.
          </p>
          <%= link_to new_outfit_suggestion_path,
              data: { turbo_frame: "modal" },
              class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-200 hover:scale-105" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span>Generate Outfit</span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state - no wardrobe items -->
    <div class="p-6">
      <div class="text-center py-8">
        <div class="w-20 h-20 mx-auto mb-4 rounded-full theme-bg flex items-center justify-center">
          <svg class="w-10 h-10 theme-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
        </div>
        <h3 class="theme-text text-lg font-semibold mb-2">Build Your Wardrobe First</h3>
        <p class="theme-text-secondary text-sm mb-6 max-w-md mx-auto">
          Add some items to your wardrobe so I can create personalized outfit suggestions for you.
        </p>
        <%= link_to new_wardrobe_item_path,
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-200 hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span>Add Your First Item</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
