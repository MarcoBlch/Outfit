<turbo-frame id="recent-items" class="space-y-6">
  <div class="flex items-center justify-between">
    <h2 class="text-xl font-bold theme-text">Recent Items</h2>
    <%= link_to "View All", wardrobe_items_path, class: "text-sm text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
  <div class="grid grid-cols-2 gap-4">
    <% recent_items.each do |item| %>
      <%= render "wardrobe_items/wardrobe_item", wardrobe_item: item %>
    <% end %>

    <% if recent_items.empty? %>
       <div class="col-span-2 text-center py-8 theme-border border rounded-xl border-dashed">
         <p class="theme-text-muted text-sm">No items yet.</p>
       </div>
    <% end %>
  </div>
</turbo-frame>
