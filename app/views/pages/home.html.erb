<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-12">
  
  <!-- Welcome Section -->
  <div class="relative rounded-2xl overflow-hidden bg-gradient-to-r from-primary-dark to-secondary p-8 md:p-12 shadow-2xl">
    <div class="relative z-10 max-w-2xl">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Welcome back, <%= current_user.email.split('@').first.titleize %>!
      </h1>
      <p class="text-blue-100 text-lg mb-8">
        Ready to discover your next look? You have <%= current_user.wardrobe_items.count %> items in your wardrobe.
      </p>
      <div class="flex flex-wrap gap-4">
        <%= render "shared/button", text: "Create New Outfit", path: new_outfit_path, icon: raw('<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>') %>
        <%= render "shared/button", text: "Upload Item", path: new_wardrobe_item_path, variant: :secondary, icon: raw('<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>') %>
      </div>
    </div>
    
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 -mt-20 -mr-20 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-20 w-64 h-64 bg-primary/30 rounded-full blur-2xl"></div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Recent Outfits -->
    <div class="lg:col-span-2 space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-white">Recent Outfits</h2>
        <%= link_to "View All", outfits_path, class: "text-sm text-primary hover:text-primary-light" %>
      </div>
      
      <% if @recent_outfits.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% @recent_outfits.each do |outfit| %>
            <%= render "shared/card", classes: "h-full" do %>
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-white"><%= outfit.name %></h3>
                <span class="text-xs text-gray-400"><%= time_ago_in_words(outfit.created_at) %> ago</span>
              </div>
              <div class="flex -space-x-2 overflow-hidden mb-4">
                <% outfit.wardrobe_items.limit(4).each do |item| %>
                  <% if item.image.attached? %>
                    <%= image_tag item.image, class: "inline-block h-10 w-10 rounded-full ring-2 ring-gray-800 object-cover" %>
                  <% else %>
                    <div class="inline-block h-10 w-10 rounded-full ring-2 ring-gray-800 bg-gray-700 flex items-center justify-center text-xs text-gray-400">?</div>
                  <% end %>
                <% end %>
                <% if outfit.wardrobe_items.count > 4 %>
                  <div class="inline-block h-10 w-10 rounded-full ring-2 ring-gray-800 bg-gray-700 flex items-center justify-center text-xs text-white font-medium">
                    +<%= outfit.wardrobe_items.count - 4 %>
                  </div>
                <% end %>
              </div>
              <%= link_to "View Details", outfit_path(outfit), class: "text-sm text-primary hover:underline" %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 bg-white/5 rounded-xl border border-white/10 border-dashed">
          <p class="text-gray-400">No outfits created yet.</p>
        </div>
      <% end %>
    </div>

    <!-- Outfit of the Day / Recent Items -->
    <div class="space-y-6">
      <h2 class="text-xl font-bold text-white">Recent Items</h2>
      <div class="grid grid-cols-2 gap-4">
        <% @recent_items.each do |item| %>
          <%= render "wardrobe_items/wardrobe_item", wardrobe_item: item %>
        <% end %>
        
        <% if @recent_items.empty? %>
           <div class="col-span-2 text-center py-8 bg-white/5 rounded-xl border border-white/10 border-dashed">
             <p class="text-gray-400 text-sm">No items yet.</p>
           </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
