<turbo-frame id="recent-outfits" class="lg:col-span-2 space-y-6">
  <div class="flex items-center justify-between">
    <h2 class="text-xl font-bold theme-text">Recent Outfits</h2>
    <%= link_to "View All", outfits_path, class: "text-sm text-purple-600 hover:text-purple-700 font-medium" %>
  </div>

  <% if recent_outfits.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% recent_outfits.each do |outfit| %>
        <%= render "shared/card", classes: "h-full theme-card-hover cursor-pointer" do %>
          <%= link_to outfit_path(outfit), class: "block" do %>
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium theme-text"><%= outfit.name %></h3>
              <span class="text-xs theme-text-muted"><%= time_ago_in_words(outfit.created_at) %> ago</span>
            </div>
            <div class="flex -space-x-2 overflow-hidden mb-4">
              <% outfit.wardrobe_items.limit(4).each do |item| %>
                <% if item.image.attached? %>
                  <%= image_tag item.image, class: "inline-block h-10 w-10 rounded-full ring-2 theme-border object-cover" %>
                <% else %>
                  <div class="inline-flex h-10 w-10 rounded-full ring-2 theme-border theme-bg items-center justify-center text-xs theme-text-muted">?</div>
                <% end %>
              <% end %>
              <% if outfit.wardrobe_items.count > 4 %>
                <div class="inline-flex h-10 w-10 rounded-full ring-2 theme-border theme-bg items-center justify-center text-xs theme-text font-medium">
                  +<%= outfit.wardrobe_items.count - 4 %>
                </div>
              <% end %>
            </div>
            <span class="text-sm text-purple-600 hover:underline font-medium">View Details â†’</span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 theme-border border rounded-xl border-dashed">
      <p class="theme-text-muted">No outfits created yet.</p>
    </div>
  <% end %>
</turbo-frame>
