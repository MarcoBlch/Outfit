<turbo-frame id="recent-outfits" class="lg:col-span-2 space-y-6">
  <div class="flex items-center justify-between">
    <h2 class="text-xl font-bold text-white">Recent Outfits</h2>
    <%= link_to "View All", outfits_path, class: "text-sm text-primary hover:text-primary-light" %>
  </div>

  <% if recent_outfits.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% recent_outfits.each do |outfit| %>
        <%= render "shared/card", classes: "h-full" do %>
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-white"><%= outfit.name %></h3>
            <span class="text-xs text-gray-400"><%= time_ago_in_words(outfit.created_at) %> ago</span>
          </div>
          <div class="flex -space-x-2 overflow-hidden mb-4">
            <% outfit.wardrobe_items.limit(4).each do |item| %>
              <% if item.image.attached? %>
                <%= image_tag item.image, class: "inline-block h-10 w-10 rounded-full ring-2 ring-gray-800 object-cover" %>
              <% else %>
                <div class="inline-block h-10 w-10 rounded-full ring-2 ring-gray-800 bg-gray-700 flex items-center justify-center text-xs text-gray-400">?</div>
              <% end %>
            <% end %>
            <% if outfit.wardrobe_items.count > 4 %>
              <div class="inline-block h-10 w-10 rounded-full ring-2 ring-gray-800 bg-gray-700 flex items-center justify-center text-xs text-white font-medium">
                +<%= outfit.wardrobe_items.count - 4 %>
              </div>
            <% end %>
          </div>
          <%= link_to "View Details", outfit_path(outfit), class: "text-sm text-primary hover:underline" %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white/5 rounded-xl border border-white/10 border-dashed">
      <p class="text-gray-400">No outfits created yet.</p>
    </div>
  <% end %>
</turbo-frame>
