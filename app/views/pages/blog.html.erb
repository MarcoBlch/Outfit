<!-- Blog Coming Soon Page -->
<div class="min-h-screen theme-bg">
  <!-- Navigation -->
  <nav class="sticky top-0 z-50 theme-bg/80 backdrop-blur-sm border-b theme-border">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <%= image_tag 'logo_option_4.svg', class: 'w-8 h-8 rounded-lg', alt: 'OutfitMaker.ai' %>
          <span class="text-xl font-bold bg-gradient-primary bg-clip-text text-transparent">
            OutfitMaker.ai
          </span>
        <% end %>
        <div class="flex items-center space-x-4">
          <button type="button"
                  class="p-2 theme-text-secondary hover:theme-text transition-colors"
                  data-controller="theme-toggle"
                  data-action="click->theme-toggle#toggle"
                  aria-label="Toggle theme">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
            </svg>
          </button>
          <%= link_to "Back to Home", root_path, class: "theme-text-secondary hover:theme-text font-medium transition" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Content -->
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="text-center">
      <!-- Icon -->
      <div class="mx-auto w-24 h-24 mb-8 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z" />
        </svg>
      </div>

      <!-- Heading -->
      <h1 class="text-4xl sm:text-5xl font-bold theme-text mb-4 tracking-tight">
        Our Blog is Coming Soon
      </h1>
      <p class="text-xl theme-text-secondary max-w-2xl mx-auto mb-12">
        We're crafting amazing content about fashion, AI, personal style, and wardrobe tips. Be the first to know when we launch.
      </p>

      <!-- Email Signup Form -->
      <div class="max-w-md mx-auto">
        <form class="space-y-4" data-controller="blog-signup" data-action="submit->blog-signup#submit">
          <div>
            <label for="email" class="sr-only">Email address</label>
            <input type="email"
                   id="email"
                   name="email"
                   placeholder="Enter your email"
                   required
                   class="w-full px-4 py-3 rounded-lg theme-card theme-border border theme-text placeholder:theme-text-secondary focus:ring-2 focus:ring-purple-500 focus:border-transparent transition">
          </div>
          <button type="submit"
                  class="w-full btn-primary py-3 text-base font-semibold inline-flex items-center justify-center">
            Notify Me When Blog Launches
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </button>
          <p class="text-sm theme-text-secondary">
            No spam, unsubscribe anytime. We respect your privacy.
          </p>
        </form>

        <!-- Success Message (hidden by default) -->
        <div class="hidden mt-6 p-4 rounded-lg bg-green-500/10 border border-green-500/20" data-blog-signup-target="success">
          <p class="text-green-600 dark:text-green-400 font-medium">
            Thanks! We'll notify you when the blog launches.
          </p>
        </div>
      </div>

      <!-- What to Expect -->
      <div class="mt-16 grid grid-cols-1 sm:grid-cols-3 gap-8 text-left">
        <div class="theme-card rounded-xl p-6 border theme-border">
          <div class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-purple-500">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456Z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold theme-text mb-2">Style Tips</h3>
          <p class="theme-text-secondary">
            Expert advice on building a versatile wardrobe and creating stunning outfits.
          </p>
        </div>

        <div class="theme-card rounded-xl p-6 border theme-border">
          <div class="w-12 h-12 rounded-lg bg-pink-500/10 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-pink-500">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 0 1-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 0 1 4.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0 1 12 15a9.065 9.065 0 0 0-6.23-.693L5 14.5m14.8.8 1.402 1.402c1.232 1.232 1.232 3.23 0 4.462l-1.8 1.8m0 0a2.25 2.25 0 0 1-3.182 0l-1.8-1.8m5.782 1.8A9 9 0 1 0 15 5.25" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold theme-text mb-2">AI Insights</h3>
          <p class="theme-text-secondary">
            Learn how AI is revolutionizing fashion and personal styling.
          </p>
        </div>

        <div class="theme-card rounded-xl p-6 border theme-border">
          <div class="w-12 h-12 rounded-lg bg-indigo-500/10 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-500">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold theme-text mb-2">User Stories</h3>
          <p class="theme-text-secondary">
            Real stories from users transforming their wardrobes with AI.
          </p>
        </div>
      </div>

      <!-- Back to App -->
      <div class="mt-12">
        <%= link_to root_path, class: "inline-flex items-center theme-text-secondary hover:theme-text transition" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
          Back to Home
        <% end %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%= render 'layouts/landing_footer' %>
</div>
