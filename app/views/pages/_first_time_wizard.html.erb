<% # First-time user quick win wizard %>
<% # Shows for users who: have no wardrobe items AND haven't dismissed the wizard %>

<div data-controller="first-time-wizard"
     data-first-time-wizard-dismissed-key-value="outfit_wizard_dismissed_<%= current_user.id %>"
     class="hidden"
     data-first-time-wizard-target="container">

  <!-- Backdrop -->
  <div class="fixed inset-0 bg-black/60 backdrop-blur-sm z-40"
       data-action="click->first-time-wizard#dismiss"
       data-first-time-wizard-target="backdrop"></div>

  <!-- Modal -->
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="theme-card theme-border border rounded-2xl shadow-2xl max-w-lg w-full p-8 relative animate-in fade-in zoom-in duration-300">
      <!-- Close button -->
      <button data-action="click->first-time-wizard#dismiss"
              class="absolute top-4 right-4 theme-text-muted hover:theme-text transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Welcome header -->
      <div class="text-center mb-8">
        <div class="mx-auto w-16 h-16 rounded-2xl bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center mb-4 shadow-lg shadow-purple-600/30">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-bold theme-text mb-2">Welcome to OutfitMaker.ai!</h2>
        <p class="theme-text-secondary">Let's get you started with your first AI outfit suggestion in under 30 seconds.</p>
      </div>

      <!-- Options -->
      <div class="space-y-4">
        <!-- Option 1: Quick upload (Recommended) -->
        <%= link_to new_wardrobe_item_path(quick_start: true), class: "block w-full p-4 theme-border border rounded-xl hover:border-purple-500/50 hover:bg-purple-600/5 transition-all group" do %>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center flex-shrink-0 group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-2">
                <span class="font-semibold theme-text">Upload 3 items</span>
                <span class="text-xs px-2 py-0.5 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full">Recommended</span>
              </div>
              <p class="text-sm theme-text-muted mt-1">Take photos of a top, bottom, and shoes to get started instantly.</p>
            </div>
            <svg class="w-5 h-5 theme-text-muted group-hover:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>

        <!-- Option 2: Sample wardrobe -->
        <%= button_to add_sample_wardrobe_path, method: :post, data: { turbo: false }, class: "block w-full p-4 theme-border border rounded-xl hover:border-purple-500/50 hover:bg-purple-600/5 transition-all group text-left" do %>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-slate-600/50 flex items-center justify-center flex-shrink-0 group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <div class="flex-1">
              <span class="font-semibold theme-text">Try with sample wardrobe</span>
              <p class="text-sm theme-text-muted mt-1">Explore the app with pre-loaded items, then add your own later.</p>
            </div>
            <svg class="w-5 h-5 theme-text-muted group-hover:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>

        <!-- Option 3: Take quiz first -->
        <%= link_to new_user_profile_path, class: "block w-full p-4 theme-border border rounded-xl hover:border-purple-500/50 hover:bg-purple-600/5 transition-all group" do %>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-slate-600/50 flex items-center justify-center flex-shrink-0 group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <span class="font-semibold theme-text">Complete style quiz first</span>
              <p class="text-sm theme-text-muted mt-1">Tell us about your style preferences for better recommendations.</p>
            </div>
            <svg class="w-5 h-5 theme-text-muted group-hover:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>
      </div>

      <!-- Skip link -->
      <div class="mt-6 text-center">
        <button data-action="click->first-time-wizard#dismiss"
                class="text-sm theme-text-muted hover:theme-text transition-colors">
          I'll explore on my own
        </button>
      </div>
    </div>
  </div>
</div>
