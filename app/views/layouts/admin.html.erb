<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel - Outfit</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="min-h-screen flex antialiased selection:bg-primary selection:text-white">
    <!-- Admin Sidebar -->
    <aside class="w-64 glass border-r border-white/10 flex-shrink-0">
      <div class="h-full flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-white/10">
          <%= link_to root_path, class: "flex items-center space-x-3 group" do %>
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-bold text-xl shadow-lg group-hover:shadow-primary/50 transition-all duration-300">
              A
            </div>
            <div>
              <div class="text-lg font-bold text-white">Admin Panel</div>
              <div class="text-xs text-gray-400">Outfit Maker</div>
            </div>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 space-y-1">
          <%= link_to admin_root_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(admin_root_path) ? 'bg-primary text-white' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>Dashboard</span>
          <% end %>

          <%= link_to admin_users_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(admin_users_path) ? 'bg-primary text-white' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span>Users</span>
          <% end %>

          <%= link_to admin_metrics_subscriptions_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(admin_metrics_subscriptions_path) ? 'bg-primary text-white' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            <span>Subscriptions</span>
          <% end %>

          <%= link_to admin_metrics_usage_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(admin_metrics_usage_path) ? 'bg-primary text-white' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span>Usage Analytics</span>
          <% end %>

          <%= link_to admin_product_recommendations_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(admin_product_recommendations_path) ? 'bg-primary text-white' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            <span>Product Analytics</span>
          <% end %>
        </nav>

        <!-- Footer -->
        <div class="p-4 border-t border-white/10">
          <%= link_to root_path, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-sm font-medium text-gray-300 hover:bg-white/10 hover:text-white transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            <span>Back to App</span>
          <% end %>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col min-w-0">
      <!-- Top Bar -->
      <header class="glass border-b border-white/10 px-6 py-4">
        <div class="flex items-center justify-between">
          <h1 class="text-2xl font-bold text-white"><%= yield :page_title %></h1>

          <div class="flex items-center space-x-4">
            <% if user_signed_in? %>
              <div class="flex items-center space-x-2 text-sm text-gray-400">
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-purple-600 to-pink-600 border border-white/10 flex items-center justify-center text-white text-xs font-bold">
                  <%= current_user.email[0].upcase %>
                </div>
                <span><%= current_user.email %></span>
              </div>
            <% end %>
          </div>
        </div>
      </header>

      <!-- Flash Messages -->
      <div id="flash_messages" class="px-6 pt-4">
        <%= render "shared/flash" %>
      </div>

      <%= turbo_frame_tag "modal" %>

      <!-- Page Content -->
      <main class="flex-1 overflow-y-auto p-6">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
