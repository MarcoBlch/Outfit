<!DOCTYPE html>
<html>
  <head>
    <title>Outfit</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json">

    <!-- iOS PWA Support -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Outfit">
    <link rel="apple-touch-icon" href="/icon-192.png">

    <!-- Theme Colors -->
    <meta name="theme-color" content="#9333ea">
    <meta name="msapplication-TileColor" content="#9333ea">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/service-worker.js')
            .then((registration) => {
              console.log('Service Worker registered:', registration.scope);
            })
            .catch((error) => {
              console.error('Service Worker registration failed:', error);
            });
        });
      }
    </script>
  </head>

  <body class="min-h-screen flex flex-col antialiased selection:bg-primary selection:text-white">
    <%= render "shared/navbar" %>
    <div id="flash_messages">
      <%= render "shared/flash" %>
    </div>

    <%= turbo_frame_tag "modal" %>

    <div data-controller="toast" data-action="image-upload:toast@window->toast#show"></div>

    <main class="flex-grow">
      <%= yield %>
    </main>
  </body>
</html>
