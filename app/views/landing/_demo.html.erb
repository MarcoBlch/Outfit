<section id="demo" class="py-24 bg-gradient-to-b from-outfit-bg to-outfit-card" data-scroll-animate>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Content -->
      <div>
        <div class="inline-block px-4 py-2 bg-purple-500/10 border border-purple-500/20 rounded-full text-sm text-purple-300 mb-6">
          See It In Action
        </div>

        <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
          From chaos to curated in seconds
        </h2>

        <p class="text-xl text-text-secondary mb-8">
          Watch how OutfitMaker.ai transforms your wardrobe photos into a perfectly organized digital closet.
        </p>

        <!-- Feature List -->
        <div class="space-y-4 mb-8">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-6 h-6 bg-green-500/20 rounded-full flex items-center justify-center mr-3 mt-1">
              <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <h4 class="text-white font-medium mb-1">Automatic Background Removal</h4>
              <p class="text-text-secondary text-sm">No green screen needed. Our AI removes backgrounds instantly.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-6 h-6 bg-green-500/20 rounded-full flex items-center justify-center mr-3 mt-1">
              <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <h4 class="text-white font-medium mb-1">Smart Auto-Tagging</h4>
              <p class="text-text-secondary text-sm">Categories, colors, patternsâ€”all tagged automatically.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-6 h-6 bg-green-500/20 rounded-full flex items-center justify-center mr-3 mt-1">
              <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <h4 class="text-white font-medium mb-1">Instant Outfit Suggestions</h4>
              <p class="text-text-secondary text-sm">Get AI-powered combinations in under 3 seconds.</p>
            </div>
          </div>
        </div>

        <%= link_to new_user_registration_path, class: 'btn-primary inline-flex items-center' do %>
          Try It Free
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        <% end %>
      </div>

      <!-- Right: Visual/Video -->
      <div class="relative">
        <!-- Demo Container with Multi-Step Process -->
        <div class="relative bg-outfit-card rounded-2xl border border-outfit-border overflow-hidden shadow-2xl">
          <!-- Process Demo Visual -->
          <div class="aspect-video bg-gradient-to-br from-[#1a1a1b] to-[#0f0f0f] p-6 flex items-center justify-center">
            <!-- 3-Step Process Visualization -->
            <div class="w-full max-w-lg space-y-6">
              <!-- Step 1: Upload -->
              <div class="flex items-center gap-4 group">
                <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-105 transition-transform">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="flex-1 bg-white/5 rounded-xl border border-white/10 p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-white font-semibold text-sm">1. Upload Photo</h4>
                    <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                  </div>
                  <div class="h-1.5 bg-white/5 rounded-full overflow-hidden">
                    <div class="h-full bg-gradient-to-r from-blue-500 to-blue-400 w-full"></div>
                  </div>
                </div>
                <svg class="w-5 h-5 text-text-muted flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>

              <!-- Step 2: AI Processing -->
              <div class="flex items-center gap-4 group">
                <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-105 transition-transform">
                  <svg class="w-8 h-8 text-white animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                  </svg>
                </div>
                <div class="flex-1 bg-white/5 rounded-xl border border-purple-500/30 p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-white font-semibold text-sm">2. AI Processing</h4>
                    <div class="flex items-center gap-1">
                      <div class="w-1 h-1 bg-purple-400 rounded-full animate-bounce"></div>
                      <div class="w-1 h-1 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                      <div class="w-1 h-1 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                    </div>
                  </div>
                  <div class="h-1.5 bg-white/5 rounded-full overflow-hidden">
                    <div class="h-full bg-gradient-to-r from-purple-500 to-pink-500 w-2/3 animate-pulse"></div>
                  </div>
                </div>
                <svg class="w-5 h-5 text-text-muted flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>

              <!-- Step 3: Ready to Use -->
              <div class="flex items-center gap-4 group">
                <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-105 transition-transform">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="flex-1 bg-white/5 rounded-xl border border-green-500/30 p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-white font-semibold text-sm">3. Ready to Wear</h4>
                    <span class="text-xs text-green-400 font-medium">Complete</span>
                  </div>
                  <div class="flex gap-2 mt-2">
                    <div class="flex-1 h-8 bg-gradient-to-br from-blue-400/20 to-blue-600/20 rounded border border-blue-500/20"></div>
                    <div class="flex-1 h-8 bg-gradient-to-br from-gray-700/30 to-gray-900/30 rounded border border-gray-500/20"></div>
                    <div class="flex-1 h-8 bg-gradient-to-br from-red-400/20 to-pink-500/20 rounded border border-red-500/20"></div>
                  </div>
                </div>
                <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>

            <!-- Play Button Overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
              <button class="w-20 h-20 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg hover:bg-white/20 hover:scale-110 transition-all border border-white/20" data-controller="video-modal" data-action="click->video-modal#open">
                <svg class="w-10 h-10 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Feature Callouts -->
          <div class="absolute top-4 right-4 bg-gradient-to-r from-purple-500/20 to-pink-500/20 backdrop-blur-md px-4 py-2 rounded-lg border border-purple-500/30 shadow-lg">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-purple-400 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span class="text-xs text-white font-medium">2.3s avg processing</span>
            </div>
          </div>

          <!-- Background Removed Badge -->
          <div class="absolute top-4 left-4 bg-gradient-to-r from-green-500/20 to-emerald-500/20 backdrop-blur-md px-4 py-2 rounded-lg border border-green-500/30 shadow-lg">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-xs text-white font-medium">Auto background removal</span>
            </div>
          </div>
        </div>

        <!-- Decorative Glow Elements -->
        <div class="absolute -z-10 -top-8 -right-8 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute -z-10 -bottom-8 -left-8 w-64 h-64 bg-pink-500/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
      </div>
    </div>
  </div>
</section>
