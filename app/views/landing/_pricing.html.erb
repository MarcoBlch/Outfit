<section id="pricing" class="py-24 bg-outfit-bg" data-scroll-animate>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="text-4xl sm:text-5xl font-bold theme-text mb-4">
        Simple, transparent pricing
      </h2>
      <p class="text-xl theme-text-secondary mb-6">
        Start free, upgrade when you're ready
      </p>

      <!-- Social Proof -->
      <div class="flex flex-wrap items-center justify-center gap-6 text-sm theme-text-muted">
        <div class="flex items-center gap-2">
          <div class="flex -space-x-1">
            <% 4.times do %>
              <div class="w-6 h-6 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 border-2 border-outfit-bg"></div>
            <% end %>
          </div>
          <span>10,000+ happy users</span>
        </div>
        <div class="flex items-center gap-1">
          <% 5.times do %>
            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          <% end %>
          <span class="ml-1">4.9/5 rating</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span>7-day money-back guarantee</span>
        </div>
      </div>
    </div>

    <!-- ROI Highlight -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-green-500/10 border border-green-500/20">
        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-green-300 font-medium">Save 10 min/day deciding what to wear = 60+ hours/year</span>
      </div>
    </div>

    <!-- Pricing Cards -->
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Free Tier -->
      <div class="theme-card theme-border rounded-2xl p-8">
        <h3 class="text-xl font-bold theme-text mb-2">Free</h3>
        <div class="mb-6">
          <span class="text-4xl font-bold theme-text">€0</span>
          <span class="theme-text-muted">/month</span>
        </div>

        <ul class="space-y-3 mb-8">
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Up to 50 wardrobe items
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            3 AI outfit suggestions per day
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Shopping recommendations
          </li>
        </ul>

        <%= link_to 'Get Started', new_user_registration_path, class: 'btn-secondary w-full text-center' %>
      </div>

      <!-- Premium Tier (Highlighted) -->
      <div class="relative bg-gradient-to-br from-purple-600/20 to-pink-600/20 border-2 border-purple-500 rounded-2xl p-8">
        <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-gradient-primary px-4 py-1 rounded-full text-sm font-medium text-white dark:text-white">
          Most Popular
        </div>

        <h3 class="text-xl font-bold theme-text mb-2">Premium</h3>
        <div class="mb-6">
          <span class="text-4xl font-bold theme-text">€7.99</span>
          <span class="theme-text-muted">/month</span>
        </div>

        <ul class="space-y-3 mb-8">
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Up to 300 wardrobe items
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            15 AI suggestions per day
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Weather-aware suggestions
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Priority support
          </li>
        </ul>

        <%= link_to 'Try Free for 7 Days', new_user_registration_path, class: 'btn-primary w-full text-center' %>
      </div>

      <!-- Pro Tier -->
      <div class="theme-card theme-border rounded-2xl p-8">
        <h3 class="text-xl font-bold theme-text mb-2">Pro</h3>
        <div class="mb-6">
          <span class="text-4xl font-bold theme-text">€14.99</span>
          <span class="theme-text-muted">/month</span>
        </div>

        <ul class="space-y-3 mb-8">
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Unlimited wardrobe items
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Unlimited AI suggestions
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Advanced style analytics
          </li>
          <li class="flex items-start theme-text-secondary">
            <svg class="w-5 h-5 text-green-400 mr-2 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Virtual try-on (coming soon)
          </li>
        </ul>

        <%= link_to 'Get Started', new_user_registration_path, class: 'btn-secondary w-full text-center' %>
      </div>
    </div>
  </div>
</section>
