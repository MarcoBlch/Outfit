<turbo-frame id="modal">
  <%= render "shared/modal" do %>
    <div class="space-y-6 max-w-3xl mx-auto">
      <!-- Header -->
      <div class="space-y-3">
        <h2 class="text-3xl font-bold theme-text">
          Edit Your Style Profile
        </h2>
        <p class="theme-text-secondary">
          Update your preferences to keep getting the best outfit recommendations.
        </p>
      </div>

      <!-- Progress Indicator -->
      <div class="space-y-2">
        <div class="flex justify-between items-center text-sm">
          <span class="theme-text-secondary">Profile Completion</span>
          <span class="text-purple-400 font-medium"><%= @user_profile.completion_percentage %>%</span>
        </div>
        <div class="w-full bg-gray-200 dark:bg-gray-800 rounded-full h-2">
          <div class="bg-gradient-to-r from-purple-600 to-pink-600 h-2 rounded-full transition-all duration-300"
               style="width: <%= @user_profile.completion_percentage %>%"></div>
        </div>
      </div>

      <%= render "user_profiles/form", user_profile: @user_profile %>
    </div>
  <% end %>
</turbo-frame>
