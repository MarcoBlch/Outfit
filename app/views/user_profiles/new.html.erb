<turbo-frame id="modal">
  <%= render "shared/modal" do %>
    <div class="space-y-6 max-w-3xl mx-auto">
      <!-- Header -->
      <div class="space-y-3 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold theme-text">
          Complete Your Style Profile
        </h2>
        <p class="theme-text-secondary">
          Answer a few quick questions to get personalized outfit recommendations tailored to your unique style preferences.
        </p>
      </div>

      <!-- Incentive Badge -->
      <div class="flex items-center justify-center space-x-2 p-3 bg-gradient-to-r from-purple-600/20 to-pink-600/20 rounded-lg border border-purple-500/30">
        <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-sm text-purple-300 font-medium">
          Get 3x better AI recommendations by completing your profile
        </span>
      </div>

      <%= render "user_profiles/form", user_profile: @user_profile %>

      <!-- Skip Option -->
      <div class="text-center pt-4 border-t theme-border">
        <a href="<%= root_path %>" class="text-sm theme-text-secondary hover:theme-text transition-colors">
          Skip for now, I'll do this later
        </a>
      </div>
    </div>
  <% end %>
</turbo-frame>
