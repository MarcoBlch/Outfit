<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold text-white">Add to Wardrobe</h1>
    <p class="mt-2 text-gray-400">Upload a photo of your clothing item. Our AI will automatically categorize it.</p>
  </div>

  <%= form_with model: @wardrobe_item, local: true, class: "space-y-8" do |f| %>
    <div data-controller="upload" class="max-w-xl mx-auto">
      <!-- Drop Zone -->
      <div data-upload-target="dropZone" data-action="click->upload#select" class="relative group cursor-pointer border-2 border-dashed border-gray-600 rounded-2xl p-12 text-center hover:border-primary hover:bg-white/5 transition-all duration-300">
        <div class="space-y-4">
          <div class="mx-auto h-20 w-20 rounded-full bg-white/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="h-10 w-10 text-gray-400 group-hover:text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="text-gray-300">
            <span class="font-medium text-primary">Click to upload</span> or drag and drop
          </div>
          <p class="text-xs text-gray-500">PNG, JPG up to 10MB</p>
        </div>
        <%= f.file_field :image, class: "hidden", data: { upload_target: "input", action: "change->upload#previewFile" }, accept: "image/*" %>
      </div>

      <!-- Preview -->
      <div class="relative rounded-2xl overflow-hidden shadow-2xl">
        <img data-upload-target="preview" class="hidden w-full h-auto object-cover" />
      </div>
    </div>

    <div class="flex justify-center space-x-4">
      <%= link_to "Cancel", wardrobe_items_path, class: "px-6 py-3 rounded-lg border border-gray-600 text-gray-300 hover:bg-white/5 transition-colors" %>
      <!-- Submit button is hidden as we auto-submit, but kept for fallback -->
      <%= f.submit "Upload Item", class: "hidden" %>
    </div>
  <% end %>
</div>
