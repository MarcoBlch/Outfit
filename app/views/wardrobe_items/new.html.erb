<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Header -->
  <div class="text-center mb-12">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 mb-4">
      <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
    <h1 class="text-4xl font-bold theme-text mb-3">Add to Wardrobe</h1>
    <p class="text-lg theme-text-secondary max-w-2xl mx-auto">Upload a photo of your clothing item. Our AI will automatically categorize and analyze it for you.</p>
  </div>

  <%= form_with model: @wardrobe_item, local: true, class: "space-y-8" do |f| %>
    <div data-controller="upload" class="max-w-2xl mx-auto">
      <!-- Drop Zone -->
      <div data-upload-target="dropZone" data-action="click->upload#select" class="relative group cursor-pointer border-2 border-dashed theme-border rounded-3xl p-16 text-center theme-card-hover transition-all duration-300 hover:border-primary hover:shadow-xl">
        <div class="space-y-6">
          <div class="mx-auto h-24 w-24 rounded-2xl theme-card border theme-border flex items-center justify-center group-hover:scale-110 group-hover:border-primary transition-all duration-300 shadow-md">
            <svg class="h-12 w-12 theme-text-muted group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-lg theme-text mb-2">
              <span class="font-semibold text-primary">Click to upload</span>
              <span class="theme-text-secondary"> or drag and drop</span>
            </p>
            <p class="text-sm theme-text-muted">PNG, JPG, HEIC up to 10MB</p>
          </div>

          <!-- Feature Pills -->
          <div class="flex flex-wrap items-center justify-center gap-3 pt-4">
            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium theme-card border theme-border">
              <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span class="theme-text-secondary">AI-powered</span>
            </span>
            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium theme-card border theme-border">
              <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
              <span class="theme-text-secondary">Auto-categorized</span>
            </span>
            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium theme-card border theme-border">
              <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
              <span class="theme-text-secondary">Background removed</span>
            </span>
          </div>
        </div>
        <%= f.file_field :image, class: "hidden", data: { upload_target: "input", action: "change->upload#previewFile" }, accept: "image/*", capture: "environment" %>
      </div>

      <!-- Preview -->
      <div class="relative rounded-3xl overflow-hidden shadow-2xl mt-8">
        <img data-upload-target="preview" class="hidden w-full h-auto object-cover" alt="Preview" />
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-center items-center gap-4">
      <%= link_to wardrobe_items_path, class: "btn-ghost" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Cancel
      <% end %>
      <!-- Submit button is hidden as we auto-submit, but kept for fallback -->
      <%= f.submit "Upload Item", class: "btn-primary hidden" %>
    </div>

    <!-- Help Text -->
    <div class="max-w-2xl mx-auto">
      <div class="theme-card border theme-border rounded-2xl p-6">
        <h3 class="text-sm font-semibold theme-text mb-3 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Tips for best results
        </h3>
        <ul class="space-y-2 text-sm theme-text-secondary">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Use well-lit photos with good contrast</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Center the clothing item in the frame</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Avoid cluttered backgrounds for better AI recognition</span>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
