<%# locals: (wardrobe_item:) %>
<div class="group relative aspect-square theme-card border theme-border rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-xl hover:scale-[1.02]">
  <!-- Neutral background for item image (consistent across themes) -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-gray-100">
    <% if wardrobe_item.cleaned_image.attached? %>
      <%= image_tag wardrobe_item.cleaned_image, class: "w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-500", alt: wardrobe_item.category&.titleize %>
    <% elsif wardrobe_item.image.attached? %>
      <%= image_tag wardrobe_item.image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: wardrobe_item.category&.titleize %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Category badge (top-left) -->
  <% if wardrobe_item.category.present? %>
    <div class="absolute top-3 left-3 z-10">
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-white/95 text-gray-800 shadow-md backdrop-blur-sm">
        <%= wardrobe_item.category.titleize %>
      </span>
    </div>
  <% else %>
    <div class="absolute top-3 left-3 z-10">
      <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-primary/90 text-white shadow-md backdrop-blur-sm">
        <svg class="animate-spin h-3 w-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Analyzing
      </span>
    </div>
  <% end %>

  <!-- Favorite/heart icon (top-right) - visible on hover -->
  <div class="absolute top-3 right-3 z-20 opacity-0 group-hover:opacity-100 transition-opacity duration-200" onclick="event.stopPropagation()">
    <button type="button" class="p-2 bg-white/95 hover:bg-white rounded-full shadow-md backdrop-blur-sm transition-all hover:scale-110" aria-label="Add to favorites">
      <svg class="w-4 h-4 text-gray-600 hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
    </button>
  </div>

  <!-- Color indicator dot (bottom-left) -->
  <% if wardrobe_item.color.present? %>
    <div class="absolute bottom-3 left-3 z-10">
      <div class="flex items-center gap-2 bg-white/95 rounded-full px-3 py-1.5 shadow-md backdrop-blur-sm">
        <div class="w-3 h-3 rounded-full border-2 border-white shadow-sm" style="background-color: <%= wardrobe_item.color %>;"></div>
        <span class="text-xs font-medium text-gray-800"><%= wardrobe_item.color.titleize %></span>
      </div>
    </div>
  <% end %>

  <!-- "Use in Outfit" quick action (bottom-right, visible on hover) -->
  <div class="absolute bottom-3 right-3 z-20 opacity-0 group-hover:opacity-100 transition-all duration-200 transform translate-y-2 group-hover:translate-y-0" onclick="event.stopPropagation()">
    <button type="button" class="btn-primary btn-sm shadow-lg" aria-label="Use in outfit">
      <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Use
    </button>
  </div>

  <!-- Delete button (hover overlay in center) -->
  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center z-15" onclick="event.stopPropagation()">
    <%= button_to wardrobe_item_path(wardrobe_item), method: :delete, class: "opacity-0 group-hover:opacity-100 transition-all duration-200 transform scale-90 group-hover:scale-100 p-2.5 bg-red-500 hover:bg-red-600 text-white rounded-full shadow-lg", form: { data: { turbo_confirm: "Delete this item?", turbo_frame: "_top" } } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
    <% end %>
  </div>

  <!-- Click area for viewing details -->
  <%= link_to "", wardrobe_item_path(wardrobe_item), class: "absolute inset-0 z-10", data: { turbo_frame: "modal" }, aria_label: "View #{wardrobe_item.category&.titleize} details" %>
</div>
