<%= turbo_frame_tag "modal" do %>
  <%= render "shared/modal" do %>
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Image Section -->
      <div class="w-full lg:w-1/2">
        <div class="aspect-square rounded-2xl overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center border theme-border shadow-lg">
          <% if @wardrobe_item.cleaned_image.attached? %>
            <%= image_tag @wardrobe_item.cleaned_image, class: "w-full h-full object-contain p-6", alt: @wardrobe_item.category&.titleize %>
          <% elsif @wardrobe_item.image.attached? %>
            <%= image_tag @wardrobe_item.image, class: "w-full h-full object-contain p-6", alt: @wardrobe_item.category&.titleize %>
          <% else %>
            <div class="flex flex-col items-center gap-3">
              <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-sm text-gray-500 font-medium">No Image</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Details/Edit Section -->
      <div class="w-full lg:w-1/2 flex flex-col min-h-[400px]" data-controller="edit-mode">
        <!-- Display Mode -->
        <div data-edit-mode-target="display" class="flex-1 flex flex-col">
          <div class="flex items-start justify-between mb-6">
            <div>
              <h2 class="text-3xl font-bold theme-text mb-2"><%= @wardrobe_item.category&.titleize || "Uncategorized" %></h2>
              <% if @wardrobe_item.category.blank? %>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary">
                  <svg class="animate-spin h-3 w-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Analyzing
                </span>
              <% end %>
            </div>
            <button type="button" data-action="edit-mode#edit" class="btn-ghost btn-sm">
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit
            </button>
          </div>

          <div class="space-y-6 flex-1">
            <!-- Color -->
            <div>
              <label class="block text-xs font-semibold theme-text-muted uppercase tracking-wider mb-2">Color</label>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg border-2 theme-border shadow-sm" style="background-color: <%= @wardrobe_item.color || '#e5e5e5' %>;"></div>
                <span class="text-base theme-text font-medium"><%= @wardrobe_item.color&.titleize || "Not specified" %></span>
              </div>
            </div>

            <!-- Tags -->
            <% if ((@wardrobe_item.metadata || {})["tags"] || []).any? %>
              <div>
                <label class="block text-xs font-semibold theme-text-muted uppercase tracking-wider mb-2">Tags</label>
                <div class="flex flex-wrap gap-2">
                  <% ((@wardrobe_item.metadata || {})["tags"] || []).each do |tag| %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium theme-card border theme-border">
                      <svg class="w-3 h-3 mr-1.5 theme-text-muted" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                      </svg>
                      <span class="theme-text-secondary"><%= tag %></span>
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Description -->
            <div>
              <label class="block text-xs font-semibold theme-text-muted uppercase tracking-wider mb-2">Description</label>
              <p class="theme-text-secondary text-sm leading-relaxed">
                <%= (@wardrobe_item.metadata || {})["description"] || "No description available." %>
              </p>
            </div>
          </div>

          <div class="pt-6 border-t theme-border flex justify-end">
            <%= button_to wardrobe_item_path(@wardrobe_item), method: :delete, class: "btn-danger btn-sm", form: { data: { turbo_confirm: "Are you sure you want to delete this item?", turbo_frame: "_top" } } do %>
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete Item
            <% end %>
          </div>
        </div>

        <!-- Edit Mode (Hidden by default) -->
        <div data-edit-mode-target="form" class="hidden">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold theme-text">Edit Item</h2>
            <button type="button" data-action="edit-mode#cancel" class="btn-ghost btn-sm">
              Cancel
            </button>
          </div>

          <%= form_with model: @wardrobe_item, class: "space-y-5" do |f| %>
            <div>
              <%= f.label :category, class: "block text-sm font-medium theme-text-secondary mb-2" %>
              <%= f.select :category,
                  ["Tops", "Bottoms", "Shoes", "Outerwear", "Accessories", "Dresses"].map { |c| [c, c.downcase] },
                  {},
                  class: "input w-full" %>
            </div>

            <div>
              <%= f.label :color, class: "block text-sm font-medium theme-text-secondary mb-2" %>
              <%= f.text_field :color, class: "input w-full" %>
            </div>

            <div>
              <label class="block text-sm font-medium theme-text-secondary mb-2">Tags (comma separated)</label>
              <input type="text"
                     name="wardrobe_item[metadata][tags]"
                     value="<%= ((@wardrobe_item.metadata || {})['tags'] || []).join(', ') %>"
                     class="input w-full"
                     placeholder="casual, summer, favorites">
            </div>

            <div class="flex-1">
              <label class="block text-sm font-medium theme-text-secondary mb-2">Description</label>
              <textarea name="wardrobe_item[metadata][description]"
                        rows="4"
                        class="input w-full resize-none"
                        placeholder="Add details about this item..."><%= (@wardrobe_item.metadata || {})['description'] %></textarea>
            </div>

            <div class="pt-4 flex justify-end gap-3 mt-auto">
              <button type="button" data-action="edit-mode#cancel" class="btn-ghost btn-sm">
                Cancel
              </button>
              <%= f.submit "Save Changes", class: "btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
