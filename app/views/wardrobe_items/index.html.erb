<%= turbo_stream_from "wardrobe_stream" %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar Filters -->
    <aside class="w-full lg:w-72 flex-shrink-0">
      <div class="theme-card border theme-border rounded-2xl p-6 shadow-lg sticky top-8">
        <h2 class="text-lg font-semibold theme-text mb-6 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
          Filters
        </h2>

        <%= form_with url: wardrobe_items_path, method: :get, data: { turbo_frame: "wardrobe_grid", controller: "filter", action: "input->filter#submit" } do |f| %>
          <!-- Search -->
          <div class="mb-6">
            <%= f.label :query, "Search", class: "sr-only" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 theme-text-muted" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
              </div>
              <%= f.text_field :query, placeholder: "Search items...", class: "input block w-full pl-10 sm:text-sm" %>
            </div>
          </div>

          <!-- Categories -->
          <div class="space-y-3">
            <h3 class="text-xs font-semibold theme-text-muted uppercase tracking-wider">Category</h3>
            <div class="space-y-2">
              <% ["Tops", "Bottoms", "Shoes", "Accessories", "Outerwear"].each do |category| %>
                <label class="flex items-center space-x-3 cursor-pointer group">
                  <%= radio_button_tag :category, category.downcase, params[:category] == category.downcase, class: "form-radio h-4 w-4 text-primary border-2 theme-border focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
                  <span class="text-sm theme-text-secondary group-hover:theme-text transition-colors"><%= category %></span>
                </label>
              <% end %>
              <label class="flex items-center space-x-3 cursor-pointer group">
                <%= radio_button_tag :category, "", params[:category].blank?, class: "form-radio h-4 w-4 text-primary border-2 theme-border focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
                <span class="text-sm theme-text-secondary group-hover:theme-text transition-colors">All Categories</span>
              </label>
            </div>
          </div>
        <% end %>
      </div>
    </aside>

    <!-- Main Grid -->
    <div class="flex-1 min-w-0">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
        <div>
          <h1 class="text-3xl font-bold theme-text">My Wardrobe</h1>
          <p class="mt-1 text-sm theme-text-secondary">Manage your clothing collection</p>
        </div>
        <%= render "shared/button", text: "Add Item", path: new_wardrobe_item_path, icon: raw('<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" /></svg>') %>
      </div>

      <%= turbo_frame_tag "wardrobe_grid" do %>
        <% if @wardrobe_items.any? %>
          <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 lg:gap-6">
            <%= render partial: "wardrobe_item", collection: @wardrobe_items %>
          </div>
        <% else %>
          <div class="theme-card border theme-border border-dashed rounded-2xl">
            <div class="text-center py-16 px-6">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full theme-bg mb-4">
                <svg class="w-8 h-8 theme-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold theme-text mb-1">No items found</h3>
              <p class="text-sm theme-text-secondary mb-6">Get started by adding your first wardrobe item.</p>
              <%= render "shared/button", text: "Upload Item", path: new_wardrobe_item_path, variant: :secondary %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
