<%
  # recommendation: ProductRecommendation instance
  # This partial displays a single product recommendation with AI image and affiliate products
%>

<div class="glass rounded-xl p-6 space-y-6"
     data-controller="product-recommendation"
     data-product-recommendation-recommendation-id-value="<%= recommendation.id %>"
     data-product-recommendation-suggestion-id-value="<%= recommendation.outfit_suggestion_id %>"
     data-action="turbo:frame-load->product-recommendation#trackView">

  <!-- Header with Category -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </div>
      </div>
      <div>
        <h3 class="text-xl font-bold text-white capitalize">
          <%= recommendation.category %>
        </h3>
        <p class="text-sm text-gray-400">
          <%= recommendation.description.truncate(60) %>
        </p>
      </div>
    </div>

    <!-- Priority Badge -->
    <%
      priority_colors = {
        'high' => { bg: 'bg-red-600/20', text: 'text-red-400', border: 'border-red-500/20' },
        'medium' => { bg: 'bg-yellow-600/20', text: 'text-yellow-400', border: 'border-yellow-500/20' },
        'low' => { bg: 'bg-green-600/20', text: 'text-green-400', border: 'border-green-500/20' }
      }
      colors = priority_colors[recommendation.priority] || priority_colors['medium']
    %>
    <span class="inline-flex items-center px-3 py-1 <%= colors[:bg] %> <%= colors[:text] %> border <%= colors[:border] %> rounded-full text-sm font-medium capitalize">
      <%= recommendation.priority %> Priority
    </span>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column: AI Generated Image -->
    <div class="lg:col-span-1">
      <div class="space-y-3">
        <h4 class="text-sm font-semibold text-purple-400 uppercase tracking-wider">
          AI Visualization
        </h4>

        <div class="aspect-square bg-white/5 rounded-lg overflow-hidden border border-white/10">
          <% if recommendation.ai_image_status == 'completed' && recommendation.ai_image_url.present? %>
            <%= image_tag recommendation.ai_image_url,
                alt: "#{recommendation.category} - #{recommendation.description}",
                class: "w-full h-full object-cover",
                loading: "lazy" %>

          <% elsif recommendation.ai_image_status == 'generating' %>
            <!-- Loading State -->
            <div class="w-full h-full flex flex-col items-center justify-center p-6 text-center space-y-3">
              <svg class="animate-spin h-10 w-10 text-purple-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <p class="text-sm text-gray-400">Generating image...</p>
            </div>

          <% elsif recommendation.ai_image_status == 'failed' %>
            <!-- Failed State -->
            <div class="w-full h-full flex flex-col items-center justify-center p-6 text-center space-y-3">
              <svg class="w-12 h-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-xs text-gray-500">Image unavailable</p>
            </div>

          <% else %>
            <!-- Pending State -->
            <div class="w-full h-full flex flex-col items-center justify-center p-6 text-center space-y-3">
              <svg class="w-12 h-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-xs text-gray-500">Image coming soon</p>
            </div>
          <% end %>
        </div>

        <!-- Color Preference -->
        <% if recommendation.color_preference.present? %>
          <div class="flex items-center space-x-2">
            <span class="text-xs text-gray-500">Suggested Color:</span>
            <span class="inline-flex items-center px-2 py-1 bg-white/5 text-gray-300 rounded-md text-xs font-medium capitalize">
              <%= recommendation.color_preference %>
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Right Column: Details and Products -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Description and Reasoning -->
      <div class="space-y-4">
        <!-- Full Description -->
        <div>
          <h4 class="text-sm font-semibold text-gray-400 mb-2">Description</h4>
          <p class="text-white leading-relaxed">
            <%= recommendation.description %>
          </p>
        </div>

        <!-- Reasoning -->
        <% if recommendation.reasoning.present? %>
          <details class="group">
            <summary class="flex items-center space-x-2 cursor-pointer text-sm font-medium text-purple-400 hover:text-purple-300 transition-colors list-none select-none">
              <svg class="w-4 h-4 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Why this item?</span>
            </summary>
            <div class="mt-3 p-4 bg-purple-900/20 rounded-xl border border-purple-500/20 text-sm text-gray-300 leading-relaxed">
              <%= recommendation.reasoning %>
            </div>
          </details>
        <% end %>

        <!-- Style Notes -->
        <% if recommendation.style_notes.present? %>
          <div class="p-4 bg-pink-900/10 rounded-lg border border-pink-500/20">
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-pink-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="text-sm font-medium text-pink-400 mb-1">Style Tip</p>
                <p class="text-sm text-gray-300 leading-relaxed">
                  <%= recommendation.style_notes %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Affiliate Products Grid -->
      <% if recommendation.has_products? %>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">
              Shop Similar Items
            </h4>
            <span class="text-xs text-gray-500">
              <%= recommendation.products_count %> <%= 'option'.pluralize(recommendation.products_count) %> available
            </span>
          </div>

          <!-- Products Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
            <% recommendation.affiliate_products.first(5).each do |product| %>
              <%= render "product_recommendations/affiliate_product",
                  affiliate_product: product,
                  recommendation: recommendation %>
            <% end %>
          </div>

          <!-- Amazon Disclosure -->
          <p class="text-xs text-gray-500 italic">
            As an Amazon Associate, we earn from qualifying purchases. Prices and availability are subject to change.
          </p>
        </div>

      <% else %>
        <!-- No Products State - Coming Soon Message -->
        <div class="p-6 bg-gradient-to-br from-purple-600/10 to-pink-600/10 rounded-lg border border-purple-500/20 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-purple-600/20 rounded-full mb-3">
            <svg class="w-6 h-6 text-purple-400 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-purple-300 mb-2">Suggestions to buy coming soon</p>
          <p class="text-xs text-gray-400">We're curating the best product matches for this recommendation</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Budget Range Indicator -->
  <% if recommendation.budget_range.present? %>
    <div class="pt-4 border-t border-white/10">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-500">Budget Range:</span>
        <span class="text-white font-medium capitalize">
          <%= recommendation.budget_range.humanize %>
        </span>
      </div>
    </div>
  <% end %>
</div>
