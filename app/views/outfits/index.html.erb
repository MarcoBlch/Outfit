<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-white">My Outfits</h1>
    <%= link_to new_outfit_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Outfit
    <% end %>
  </div>

  <% if @outfits.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @outfits.each do |outfit| %>
        <%= render "shared/card", classes: "group hover:border-primary/50 transition-colors" do %>
          <div class="p-4">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-white truncate"><%= outfit.name.presence || "Untitled Outfit" %></h3>
              <span class="text-xs text-gray-500"><%= time_ago_in_words(outfit.created_at) %> ago</span>
            </div>

            <!-- Mini Grid Preview -->
            <div class="grid grid-cols-2 gap-2 aspect-square bg-black/20 rounded-lg p-2 mb-4">
              <% outfit.wardrobe_items.limit(4).each do |item| %>
                <div class="relative aspect-square bg-white/5 rounded overflow-hidden">
                  <% if item.image.attached? %>
                    <%= image_tag item.image, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center text-gray-600">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <% if outfit.wardrobe_items.count > 4 %>
                <div class="absolute inset-0 flex items-center justify-center bg-black/50 rounded-lg">
                  <span class="text-white font-medium">+<%= outfit.wardrobe_items.count - 4 %></span>
                </div>
              <% end %>
            </div>

            <div class="flex items-center justify-end space-x-2">
              <%= link_to "View", outfit_path(outfit), class: "text-sm text-gray-400 hover:text-white transition-colors" %>
              <%= button_to "Delete", outfit_path(outfit), method: :delete, class: "text-sm text-red-400 hover:text-red-300 transition-colors", form: { data: { turbo_confirm: "Are you sure?" } } %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-white">No outfits yet</h3>
      <p class="mt-1 text-sm text-gray-400">Get started by creating your first outfit.</p>
      <div class="mt-6">
        <%= link_to new_outfit_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Outfit
        <% end %>
      </div>
    </div>
  <% end %>
</div>
