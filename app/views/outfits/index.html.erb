<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold theme-text">My Outfits</h1>
    <%= link_to new_outfit_path, class: "btn-primary inline-flex items-center" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Outfit
    <% end %>
  </div>

  <% if @outfits.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @outfits.each do |outfit| %>
        <div class="theme-card rounded-xl border theme-border overflow-hidden group hover:border-purple-500/50 transition-colors">
          <div class="p-4">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium theme-text truncate"><%= outfit.name.presence || "Untitled Outfit" %></h3>
              <span class="text-xs theme-text-muted"><%= time_ago_in_words(outfit.created_at) %> ago</span>
            </div>

            <!-- Mini Grid Preview -->
            <div class="grid grid-cols-2 gap-2 aspect-square bg-gray-100 dark:bg-gray-800/50 rounded-lg p-2 mb-4 relative">
              <% outfit.wardrobe_items.limit(4).each do |item| %>
                <div class="relative aspect-square bg-white dark:bg-gray-700 rounded overflow-hidden">
                  <% if item.image.attached? %>
                    <%= image_tag item.image, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center theme-text-muted">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <% if outfit.wardrobe_items.count > 4 %>
                <div class="absolute inset-0 flex items-center justify-center bg-black/50 rounded-lg">
                  <span class="text-white font-medium">+<%= outfit.wardrobe_items.count - 4 %></span>
                </div>
              <% end %>
            </div>

            <div class="flex items-center justify-end space-x-3">
              <%= link_to "View", outfit_path(outfit), class: "text-sm theme-text-secondary hover:theme-text transition-colors" %>
              <%= button_to "Delete", outfit_path(outfit), method: :delete, class: "text-sm text-red-500 hover:text-red-400 transition-colors", form: { data: { turbo_confirm: "Are you sure?" } } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="mx-auto h-16 w-16 theme-text-muted mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456Z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium theme-text">No outfits yet</h3>
      <p class="mt-1 theme-text-secondary">Get started by creating your first outfit.</p>
      <div class="mt-6">
        <%= link_to new_outfit_path, class: "btn-primary inline-flex items-center" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Outfit
        <% end %>
      </div>
    </div>
  <% end %>
</div>
