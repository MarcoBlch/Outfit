<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-white"><%= @outfit.name %></h1>
    <div class="flex space-x-4">
      <%= link_to "Edit", edit_outfit_path(@outfit), class: "px-4 py-2 border border-gray-600 rounded text-gray-300 hover:text-white" %>
      <%= button_to "Delete", outfit_path(@outfit), method: :delete, class: "px-4 py-2 bg-red-600 rounded text-white hover:bg-red-700" %>
    </div>
  </div>

  <div class="bg-white/5 rounded-xl p-8 border border-white/10">
    <p class="text-gray-300">Outfit details coming soon...</p>
    <div class="mt-4">
      <h2 class="text-xl font-bold text-white mb-4">Items</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @outfit.wardrobe_items.each do |item| %>
          <div class="aspect-square bg-white/10 rounded flex items-center justify-center">
            <% if item.image.attached? %>
              <%= image_tag item.image, class: "w-full h-full object-contain" %>
            <% else %>
              <span><%= item.category %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
