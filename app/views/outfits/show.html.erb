<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back link -->
  <%= link_to outfits_path, class: "inline-flex items-center theme-text-secondary hover:theme-text transition-colors mb-6" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
    </svg>
    Back to Outfits
  <% end %>

  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold theme-text"><%= @outfit.name.presence || "Untitled Outfit" %></h1>
    <div class="flex space-x-3">
      <%= link_to edit_outfit_path(@outfit), class: "btn-secondary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
        Edit
      <% end %>
      <%= button_to outfit_path(@outfit), method: :delete, class: "px-4 py-2 bg-red-500 hover:bg-red-600 rounded-lg text-white font-medium transition-colors inline-flex items-center", form: { data: { turbo_confirm: "Are you sure you want to delete this outfit?" } } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="theme-card rounded-xl p-8 border theme-border">
    <!-- Outfit Meta -->
    <div class="flex items-center space-x-4 mb-6 pb-6 border-b theme-border">
      <div class="text-sm theme-text-secondary">
        <span class="font-medium theme-text"><%= @outfit.wardrobe_items.count %></span> items
      </div>
      <div class="w-1 h-1 rounded-full bg-gray-400"></div>
      <div class="text-sm theme-text-secondary">
        Created <%= time_ago_in_words(@outfit.created_at) %> ago
      </div>
    </div>

    <div>
      <h2 class="text-xl font-bold theme-text mb-4">Items in this Outfit</h2>
      <% if @outfit.wardrobe_items.any? %>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
          <% @outfit.wardrobe_items.each do |item| %>
            <%= link_to wardrobe_item_path(item), class: "group" do %>
              <div class="aspect-square bg-white rounded-lg overflow-hidden border theme-border group-hover:border-purple-500 transition-colors">
                <% if item.image.attached? %>
                  <%= image_tag item.image, class: "w-full h-full object-contain" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center theme-text-muted">
                    <span class="text-sm"><%= item.category&.titleize || "Item" %></span>
                  </div>
                <% end %>
              </div>
              <div class="mt-2 text-sm theme-text-secondary group-hover:text-purple-500 truncate transition-colors">
                <%= item.category&.titleize || "Uncategorized" %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="theme-text-secondary">No items in this outfit.</p>
      <% end %>
    </div>
  </div>
</div>
