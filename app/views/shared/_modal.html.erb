<div data-controller="modal" 
     data-modal-target="container"
     data-modal-auto-open-value="true"
     class="relative z-50" 
     aria-labelledby="modal-title" 
     role="dialog" 
     aria-modal="true">
     
  <!-- Background backdrop -->
  <div data-modal-target="backdrop"
       class="fixed inset-0 theme-bg backdrop-blur-sm transition-opacity duration-300 opacity-0"
       data-action="click->modal#closeBackground"
       style="--tw-bg-opacity: 0.8"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <!-- Modal panel -->
      <div data-modal-target="panel"
           class="relative transform overflow-hidden rounded-2xl theme-card border theme-border text-left shadow-xl transition-all duration-300 opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 sm:my-8 sm:w-full sm:max-w-4xl">

        <div class="absolute right-0 top-0 hidden pr-4 pt-4 sm:block z-10">
          <button type="button"
                  data-action="modal#close"
                  class="rounded-md theme-card theme-text-secondary hover:theme-text focus:outline-none">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</div>
