<%# locals: (message:, type: "notice") %>
<div class="fixed top-4 right-4 z-50 flex flex-col gap-2 transition-all duration-300"
     data-controller="flash"
     data-transition-enter="transform ease-out duration-300 transition"
     data-transition-enter-from="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
     data-transition-enter-to="translate-y-0 opacity-100 sm:translate-x-0"
     data-transition-leave="transition ease-in duration-100"
     data-transition-leave-from="opacity-100"
     data-transition-leave-to="opacity-0">
     
  <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 backdrop-blur-xl border border-white/10 <%= type == 'alert' ? 'bg-red-500/10' : 'bg-white/10' %>">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <% if type == 'alert' %>
            <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
            </svg>
          <% else %>
            <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3 w-0 flex-1 pt-0.5">
          <p class="text-sm font-medium text-white"><%= message %></p>
        </div>
        <div class="ml-4 flex flex-shrink-0">
          <button type="button" class="inline-flex rounded-md bg-transparent text-gray-400 hover:text-gray-300 focus:outline-none" onclick="this.closest('[data-controller]').remove()">
            <span class="sr-only">Close</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
