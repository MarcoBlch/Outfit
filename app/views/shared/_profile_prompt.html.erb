<% # Profile completion prompt - shown after first AI suggestion %>
<% # Only shows if user doesn't have a profile and has at least one suggestion %>

<% if current_user.user_profile.blank? && current_user.outfit_suggestions.count == 1 %>
  <div class="theme-card theme-border border rounded-xl p-6 mt-6 bg-gradient-to-br from-purple-900/20 to-pink-900/20 relative overflow-hidden"
       data-controller="dismissable"
       data-dismissable-key-value="profile_prompt_dismissed_<%= current_user.id %>">

    <!-- Decorative element -->
    <div class="absolute -top-8 -right-8 w-32 h-32 bg-purple-600/20 rounded-full blur-2xl"></div>

    <div class="relative z-10 flex flex-col sm:flex-row sm:items-center gap-4">
      <!-- Icon -->
      <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center flex-shrink-0">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
      </div>

      <!-- Content -->
      <div class="flex-1">
        <h3 class="font-semibold theme-text mb-1">Want even better suggestions?</h3>
        <p class="text-sm theme-text-muted">
          Complete your style profile in 2 minutes. Our AI will learn your preferences and give you more personalized outfit ideas.
        </p>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-3 flex-shrink-0">
        <%= link_to new_user_profile_path, class: "px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-sm font-medium rounded-lg hover:shadow-lg hover:shadow-purple-600/30 transition-all" do %>
          Complete Profile
        <% end %>

        <button data-action="click->dismissable#dismiss"
                class="text-sm theme-text-muted hover:theme-text transition-colors">
          Later
        </button>
      </div>
    </div>
  </div>
<% end %>
