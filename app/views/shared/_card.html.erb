<%# locals: (title: nil, footer: nil, classes: "") %>
<div class="theme-card rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 <%= classes %>">
  <% if title %>
    <div class="px-6 py-4 border-b theme-border">
      <h3 class="text-lg font-medium theme-text"><%= title %></h3>
    </div>
  <% end %>

  <div class="px-6 py-4">
    <%= yield %>
  </div>

  <% if footer %>
    <div class="px-6 py-4 theme-card-hover border-t theme-border">
      <%= footer %>
    </div>
  <% end %>
</div>
