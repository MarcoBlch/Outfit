<%# locals: (title: nil, footer: nil, classes: "") %>
<div class="glass rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 <%= classes %>">
  <% if title %>
    <div class="px-6 py-4 border-b border-white/5">
      <h3 class="text-lg font-medium text-white"><%= title %></h3>
    </div>
  <% end %>
  
  <div class="px-6 py-4">
    <%= yield %>
  </div>

  <% if footer %>
    <div class="px-6 py-4 bg-black/20 border-t border-white/5">
      <%= footer %>
    </div>
  <% end %>
</div>
