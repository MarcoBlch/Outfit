<%# locals: (text:, path: nil, method: :get, variant: :primary, icon: nil, classes: "") %>
<% 
  base_classes = "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 transition-all duration-200"
  
  variant_classes = case variant.to_sym
    when :primary
      "bg-primary hover:bg-primary-dark text-white shadow-primary/20 hover:shadow-primary/40"
    when :secondary
      "bg-white/10 hover:bg-white/20 text-white border-white/10 backdrop-blur-sm"
    when :ghost
      "text-gray-300 hover:text-white hover:bg-white/5"
    when :danger
      "bg-red-600 hover:bg-red-700 text-white shadow-red-500/20"
    end
%>

<% if path %>
  <%= link_to path, class: "#{base_classes} #{variant_classes} #{classes}", data: { turbo_method: method } do %>
    <% if icon %>
      <%= icon %>
    <% end %>
    <%= text %>
  <% end %>
<% else %>
  <button type="submit" class="<%= base_classes %> <%= variant_classes %> <%= classes %>">
    <% if icon %>
      <%= icon %>
    <% end %>
    <%= text %>
  </button>
<% end %>
